				<option value="7">7 in.</option>
				<option value="8">8 in.</option>
				<option value="9">9 in.</option>
				<option value="10">10 in.</option>
				<option value="11">11 in.</option>
				<option value="12">12 in.</option>
			</select>
		</div>
		<div class="module_inner settings_weight">
			<h2 class="title">Weight</h2>
			<input type="text" id="weight" /><p>pounds (lb.)</p>
		</div>
		<input class="button_norm" type="submit" value="Save" />
		<div class="cf"></div>
	</div>
	<div class="module other_settings">
		<h1 class="headline">Notification Preferences</h1>
		<div class="module_inner settings_number">
			<h2 class="title">Mobile Number</h2>
			<input type="text" id="number" />
		</div>
		<div class="module_inner settings_notification">
			<h2 class="title">Notify me via...</h2>
			<ul>
				<li><input type="checkbox" class="notification_pref" id="sms" value="SMS" /><label class="check_label" for="sms">SMS/text message</label></li>
				<li><input type="checkbox" class="notification_pref" id="email" value="Email" /><label class="check_label" for="email">Email</label></li>
				<li><input type="checkbox" class="notification_pref" id="both" value="Both" /><label class="check_label" for="both">Both</label></li>
				<li><input type="checkbox" class="notification_pref" id="none" value="None" /><label class="check_label" for="none">No notifications</label></li>
			</ul>
		</div>
		<input class="button_norm" type="submit" value="Save" />
	</div>
	<div class="cf"></div>
</div>