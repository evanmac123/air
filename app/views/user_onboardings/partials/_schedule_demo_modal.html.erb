<div class="schedule-demo-modal-container">
  <div data-reveal class='onboarding-generic-modals schedule-demo-modal reveal-modal small' id='schedule-demo-modal' style="background:#fff;">
    <div class="row">
      <div class="columns small-12">
        <div class='onboarding-new'>
          <%= form_tag api_v1_email_info_requests_path, id:"demo-request-form" do %>
            <%= hidden_field_tag "request[email]", @onboarding_initializer.try(:email) || @user_onboarding_init.try(:email) || @user_onboarding.user.email %>
            <%= hidden_field_tag "request[name]", @onboarding_initializer.try(:name) || @user_onboarding_init.try(:email) || @user_onboarding.user.name %>
            <%= hidden_field_tag "request[source]", "demo_request" %>
          <%end%>
          <div class="text-center onboarding-new-image">
            <%= image_tag "airbo_character_hi.png", class: "onboarding-img" %>
          </div>
          <p>Thanks for requesting a demo!</p>
          <p>An Airbo team member will reach out to you shortly to get one scheduled.</p>
          <div class="text-center">
            <div class="button outlined blue-alt close-demo-button">
              Return to your Airbo
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
