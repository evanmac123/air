<%#FIXME why all this conditional logic in the view %>
<% display_creator_info ||= false %>
<% completed_tiles ||= nil %>
<% tags ||= [] %>
<% selected_tag_id ||= nil %>
<% hdr_text ||= nil %>
<% tiles_length =  not_completed_tiles.try(:length).to_i + completed_tiles.try(:length).to_i %>

<div id="tile_wall" data-display-first-tile-hint="<%= @display_first_tile_hint %>">
  <%=content_tag :h1, hdr_text, class:"tile-wall-header text-center padded-v-20" if hdr_text %>
  <%= render 'shared/tile_tags', tags: tags %>

  <div class="all_tile_thumbnails row">
    <% if not_completed_tiles.present? %>
      <% not_completed_tiles.each do |tile| %>
        <% present(tile, SingleTilePresenter, { public_slug: params[:public_slug], type: "user", is_ie: browser.ie?, completed: false, user_onboarding: @user_onboarding.id }) do |presenter| %>
        <%= render 'client_admin/tiles/manage_tiles/single_tile', presenter: presenter %>
      <% end %>
      <% end %>
    <% end %>
    <% if completed_tiles.present? %>
      <% completed_tiles.each do |tile| %>
        <% present(tile, SingleTilePresenter, { public_slug: params[:public_slug], type: "user", is_ie: browser.ie?, completed: true, user_onboarding: @user_onboarding.id }) do |presenter|%>
        <%= render 'client_admin/tiles/manage_tiles/single_tile', presenter: presenter %>
      <% end %>
      <% end %>
    <% end %>
    <% odd_row_length = tiles_length % tile_row_size %>
    <% if odd_row_length != 0 || @no_tiles_to_do %>
      <% (tile_row_size - odd_row_length).times do %>
        <div class="tile_container placeholder_container">
          <div class="tile_thumbnail placeholder_tile"></div>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= render 'shared/tiles_wall_client_admin_tools', disable_button: true %>
  <%= render 'user_onboardings/partials/board_view_modal' %>
  
  <% if params[:return_onboarding] == "true" %>
    <%= render 'user_onboardings/partials/welcome_back_modal' %>
  <% end %>
</div>
