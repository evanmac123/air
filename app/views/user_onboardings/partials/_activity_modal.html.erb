<div class="activity-modal-container">
  <div data-reveal class='activity-modal onboarding-generic-modals reveal-modal medium' id='activity-modal' style="background:#fff;">
    <div class="row">
      <div class="columns small-12">
        <div class='text-center onboarding-new'>
          <div class="onboarding-new-image">
            <%= image_tag "airbo_complete_tile_check.png", class: "onboarding-img" %>
          </div>
          <h3>Great job completing your first Tile! You can now see data on who reads and answers your Tiles on the Activity Dashboard.</h3>
          <div class="button outlined-alt blue-and-green close-activity-modal-button">
            Complete More Tiles
          </div>
          <% if @user_onboarding.id %>
            <div class="button outlined-alt blue-and-green close-activity-modal-button">
              <%= link_to "View Activity Dashboard", onboarding_activity_path(@user_onboarding.id) %>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
