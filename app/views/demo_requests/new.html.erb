<%= render 'shared/public_header' %>

<div class="join-view">
  <div class="row">
    <div class="small-12 small-centered columns join-form">
      <h1>Schedule a demo.</h1>
      <div class="line-separator"></div>
      <h4>Weâ€™ll email you within the next few hours to schedule a 30 minute overview.</h4>
      <%= form_tag(demo_requests_path, id: "landing_info_request_form") do %>
        <label class="input_label">Full name</label>
        <%= text_field_tag "request[name]" %>
        <label class="input_label">Email address</label>
        <%= text_field_tag "request[email]" %>

        <label class="input_label">Phone number</label>
        <%= text_field_tag "request[phone]" %>

        <label class="input_label">Company name</label>
        <%= text_field_tag "request[company]" %>
        <label class="input_label">Company size</label>
        <%= select_tag "request[size]", options_for_select(["less than 100 employees", "100-500 employees", "500-1000 employees", "1000-5000 employees", "more than 5000 employees"]) %>
        <%= hidden_field_tag "request[source]", "demo_request" %>
        <%= submit_tag "Request demo", class: "join-button button success center" %>

        <p class="terms" id="t-and-c-notice">By submitting this form or using this site, you are agreeing to the <%= link_to 'terms and conditions', terms_path, target: '_blank' %>.</p>
      <% end %>
    </div>
  </div>
</div>
