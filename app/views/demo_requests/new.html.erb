<div class="join-view">
  <div class="row">
    <div class="logo">
      <%= link_to "/" do %>
        <div class="logo_image"></div>
      <% end %>
    </div>
    <div class="small-12 small-centered columns join-form">
      <h1>Start the conversation.</h1>
      <div class="line-separator"></div>
      <h4>Schedule a demo and learn how Airbo engages organizations from 20 to 75,000 employees.</h4>
      <%= form_tag(demo_requests_path, id: "schedule_demo_form") do %>
        <label class="input_label">Your first and last name</label>
        <%= text_field_tag "demo_request[name]" %>

        <label class="input_label">Your email</label>
        <%= text_field_tag "demo_request[email]" %>

        <label class="input_label">Phone number</label>
        <%= text_field_tag "demo_request[phone]" %>

        <label class="input_label">Company name</label>
        <%= text_field_tag "demo_request[company]" %>
        <label class="input_label">Company size</label>
        <%= select_tag "demo_request[size]", options_for_select(["less than 100 employees", "100-500 employees", "500-1000 employees", "1000-5000 employees", "more than 5000 employees"]) %>
        <%= hidden_field_tag "creation_source_board", "Boards/new Page" %>
        <%= hidden_field_tag "creation_source_creator", "Marketing Page" %>
        <%= submit_tag "Request demo", class: "join-button button success center" %>

        <p class="terms" id="t-and-c-notice">By submitting this form or using this site, you are agreeing to the <%= link_to 'terms and conditions', terms_path, target: '_blank' %>.</p>
      <% end %>
    </div>
  </div>
</div>
