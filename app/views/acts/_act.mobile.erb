<li id="<%= dom_id(act) %>" class="act">
  <div class="user">
    <%= link_to(act.user.name, act.user) %>
    <span class="when">
      <%= time_ago_in_words(act.created_at) %> ago
    </span>
  </div>
  <span class="description">
    <%= (act.text) %>
    <% if act.rule %>
      <span class="points">
        <%= points(act.points) %> pts
      </span>
    <% end %>
  </span>
</li>
