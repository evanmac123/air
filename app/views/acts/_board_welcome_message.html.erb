<div id="boardWelcomeMessageModal" class="js-board-welcome-modal reveal-modal small" data-reveal aria-labelledby="boardWelcomeMessageModal" aria-hidden="true" role="dialog" data-show-on-load="<%= show_on_load %>">
  <% if board.internal? %>
    <div class="image-header text-center">
      <%= image_tag "airbo-venice-fireworks.svg", width: "500px" %>
    </div>
  <% end %>
  <div class="welcome-header text-center blue">
    <h3><%= "Welcome to #{board.name_as_noun}!" %></h3>
  </div>
  <div class="welcome-message">
    <p><%= board.intro_message %></p>
  </div>
  <div class="get-started-button text-center mt-1">
    <%= link_to "Get Started", "#", class: "button close-airbo-modal" %>
  </div>

  <% if current_user.is_a?(GuestUser) %>
    <div class="already-a-user-text text-center">
      <p class="mb-0" style="font-size:12px;">Already a user? <%= link_to "Sign in.", login_path %></p>
    </div>
  <% end %>
</div>
