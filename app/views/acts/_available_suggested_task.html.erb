<div class="suggested-task">
  <%= available_suggested_task.name %><br/>
  <%= available_suggested_task.short_description %><br/>
  <% more_info_link_id = "more-info-#{available_suggested_task.id}" %>
  <% long_description_div_id = "long-description-#{available_suggested_task.id}" %>
  <div id="<%= long_description_div_id %>" style="display: none"><%= available_suggested_task.long_description %></div>
  <%= link_to 'More info', '#', :id => more_info_link_id %>
  <% content_for :javascript do %>
    <%= javascript_tag do %>
      $('#<%= more_info_link_id %>').click(function(e) {
        e.preventDefault();
        $('#<%= long_description_div_id %>').show();
      });
    <% end %>
  <% end %>
</div>
