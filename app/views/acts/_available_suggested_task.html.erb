<div class="suggested-task gradient competition"><!-- HOOKUP -->
  <p class="dose-title"><%= available_suggested_task.name %></p>
  <p class="dose-descript"><%= available_suggested_task.short_description %></p>
  <% more_info_link_id = "more-info-#{available_suggested_task.id}" %>
  <% long_description_div_id = "long-description-#{available_suggested_task.id}" %>
  <%= link_to 'More info', '#', :id => more_info_link_id %>
  <% content_for :javascript do %>
    <%= javascript_tag do %>
      $('#<%= more_info_link_id %>').click(function(e) {
        e.preventDefault();
        $('#<%= long_description_div_id %>').show();
      });
    <% end %>
  <% end %>
  <div class="gradient" id="<%= long_description_div_id %>" style="display: none"><%= available_suggested_task.long_description %></div>
</div>
