<%= javascript_include_tag 'jquery.lightbox_me' %>
<%= render 'shared/tile_wall', tiles: @displayable_tiles %>

<div class="row">
  <div id="feed_wrapper" class="large-8 columns">
    <div class="feeds module">

      <h1 class="headline" id="feeds_title">Activity</h1>

  	    <% content_for :javascript do %>
          <%= javascript_tag do %>
            $('.show_more_tiles').live('click', function(event) {
              event.preventDefault();

              $('#show_more_tiles_spinner').show();

              baseBatchSize = $('.tile-wrapper').length;
              $.get(
                $(this).data('tile-path'),
                {base_batch_size: baseBatchSize, partial_only: 'true'},
                function(data) {
                  $('.all_tile_thumbnails').replaceWith(data);
                }
              );
            });
  	      <% end %>
  	    <% end %>

        <ul id="user-acts">
  	      <%= render :partial => "shared/act", :collection => @acts, :as => :act %>
        </ul>

        <%= render 'shared/see_more' %>

        <%= image_tag 'spinner.gif', :id => 'see-more-spinner', :style => 'display:none;' %>

  	    <%= render 'shared/bind_see_more', 
  	      :offset_var_name     => 'actOffset', 
  	      :current_offset      => @acts.length,
  	      :button_selector     => '#see-more',
  	      :spinner_selector    => '#see-more-spinner',
  	      :original_path       => acts_path(:format => :js, :show_only => @show_only, :mode => 'see-more'),
  	      :path_var_name       => 'actsPath',
  	      :mixpanel_event_name => 'saw more acts'
  	    %>

  	</div>
  </div>

  <div class="large-4 columns">
    <div class="module" id="scoreboard-module">
      <%= render 'scoreboard', :user => @current_user %>
    </div>
    <div class="module" id="invite-module">
      <%= render :partial => "invite_your_friends" %>  
    </div>
  </div>

</div>

<div id='faq_mini'>
  <div id='faq_mini_inner'>
    <%= render 'pages/faq_mini' %>
    <br />
    <div class="Standard">Thanks for reading! Enter "<span class='green bold'>game on</span>" in the play box to earn 3 pts!</div>
    <%= button_to "Get More Help", faq_path, :method => :get, :style => "float: left;" %>
  </div>
</div>

<% if @display_get_started_lightbox %>
  <div id='get_started_lightbox'>
    <a href="#" id="close_get_started_lightbox">Close</a>
    <h2>Welcome to H.Engage!</h2>
    <p>Read and answer the questions on tiles for points. To get started, click on the sample tile below.</p>
  </div>

  <% content_for :javascript do %>
    <%= javascript_tag do %>
      $('#close_get_started_lightbox').click(function(event) {
        event.preventDefault();
        $('#get_started_lightbox').trigger('close');
      });

      $('#get_started_lightbox').lightbox_me();
    <% end %>
  <% end %>
<% end %>
