<% content_for :meta do %>
  <%= render 'shared/opengraph_meta_tags_board', board: @demo || current_board %>
<% end %>

<%= render partial: 'shared/tiles/user_progress', locals: { as_null:false, raffle: current_user.demo.raffle, opts: {} } %>
<%= render 'shared/tile_wall', @displayable_categorized_tiles.merge(path_for_more_tiles: tiles_path) %>

<%= render "acts/activity_components" %>

<% if current_user.is_a?(PotentialUser) %>
  <%= render "acts/register_potential_user_modal" %>
<% elsif should_convert_guest_as_user?(current_user) %>
  <%= render "shared/guest_conversion_lightbox", user: current_user, demo: current_board %>
<% end %>

<%= render "acts/board_welcome_message", board: current_board, show_on_load: @display_board_welcome_message %>
