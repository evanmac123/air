<div class="container">
	<div id="suggested-tasks">
	  <h2>Here is your Daily Dose!</h2>
	  <%= render :partial => 'displayable_task_suggestion', :collection => @displayable_task_suggestions %>
	  <% content_for :javascript do %>
	    <%= javascript_tag do %>
        $('.recently-completed').css({'border-color': 'white'}).effect('highlight', {}, 500, function() {$(this).fadeOut(2000, function(){$(this).remove()})});
	    <% end %>
	  <% end %>
	  <div class="more-tasks">
	  	<a href="#" title="Show more suggested tasks"><img src="/images/v3/arrow-down.png" />Show more tasks<img src="/images/v3/arrow-down.png" /></a><!-- HOOKUP -->
	  </div>
	</div>
	<div class="invite-module module">
		<%= render :partial => "invite_your_friends" %>  
	</div>
	<div class="feeds module">
	    <h1 class="headline">Feeds</h1>

	    <ul class="tabs" id="activity-feed-tabs">
	      <%= tab "All", acts_path(:format => :js), @active_act_tab %>
	      <%= tab "Following", acts_path(:show_only => 'following', :format => :js), @active_act_tab %>
	      <%= tab "Mine", acts_path(:show_only => 'mine', :format => :js), @active_act_tab %>
	    </ul>
	
		<div class="cf"></div>

	    <% content_for :javascript do %>
	      <%= mp_track 'activity feed viewed', :game => @demo.name %>
	      <%= javascript_tag do %>
	        function updateShownActs(url) {
	          $('#user-acts').html('<%= image_tag("spinner.gif") %>');
	          $.get(url, function(data) {
	            $('#user-acts').html(data);
	          });
	        }

	        $("#activity-feed-tabs a").click(function(e) {
	          updateShownActs($(this).attr('href'));
	          e.preventDefault();
	        });
	      <% end %>
	    <% end %>

	    <ul id="user-acts">
	      <%= render :partial => "shared/new_act", :collection => @acts, :as => :act %>
	    </ul>

      <div class="seemore">
			<img src="/images/v3/arrow-down.png" />
			<%= link_to "See more", '#', :id => 'see-more' %>
			<img src="/images/v3/arrow-down.png" />
      </div>

      <%= image_tag 'spinner.gif', :id => 'see-more-spinner', :style => 'display:none' %>

	    <%= render 'shared/bind_see_more', 
	      :offset_var_name     => 'actOffset', 
	      :current_offset      => @acts.length,
	      :button_selector     => '#see-more',
	      :spinner_selector    => '#see-more-spinner',
	      :original_path       => acts_path(:format => :js, :show_only => @show_only, :mode => 'see-more'),
	      :path_var_name       => 'actsPath',
	      :mixpanel_event_name => 'saw more acts'
	    %>
	</div>
	
<!--	<div class="active-games module">
		<h1 class="headline">Your active games</h1>
	</div> -->
</div>
