
<%= javascript_include_tag 'jquery.lightbox_me' %>
<%= render partial: 'shared/tiles/user_progress', locals: {raffle: current_user.demo.raffle} %>
<%= render 'shared/tile_wall', @displayable_categorized_tiles.merge(path_for_more_tiles: tiles_path) %>

<% unless @demo.is_parent? && current_user.is_guest? %>
  <%= render "activity_feed" %>
<%end%>

<%= render "shared/guest_conversion_lightbox", user: @current_user, show_conversion_form: @show_conversion_form, demo: @current_user.demo %>

<% if current_user.is_a? PotentialUser %>
  <%= render partial: "register_potential_user_lightbox" %>
<% elsif @display_activity_page_admin_guide %>
  <%= render partial: "activity_page_admin_guide" %>
<% elsif @display_get_started_lightbox %>
  <% suppress_conversion_modal = @current_user.demo && $rollout.active?(:suppress_conversion_modal, @current_user.demo) %>
  <%= render "get_started_lightbox", board_name: current_user.demo.name, is_guest: @current_user.is_guest?, get_started_lightbox_message: @get_started_lightbox_message, suppress_conversion_modal: suppress_conversion_modal %>
<% end %>
