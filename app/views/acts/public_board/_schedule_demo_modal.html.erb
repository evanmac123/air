<div id="schedule_demo_modal" class="reveal-modal small">
  <a class="close-reveal-modal"><i class="fa fa-times fa-2x"></i></a>
  <div id="modal_content" style="">
    <div class="banner_img">
      <%=image_tag "airbo_logo_lightblue_square_smile.png" %>
    </div>
    <div id="request_content">
      <p class="greeting">
        Submit your company email address to schedule a demo of Airbo.
      </p>
      <%= form_for DemoRequest.new, html:{id: "schedule_demo_form"} do |f| %>
        <div class="form_data">
          <div class="email_field">
            <%= f.text_field :email, placeholder: "Your company email" %>
          </div>
          <%= f.submit "Schedule a demo", id: "submit_demo_request" %>
        </div>
      <% end %>
    </div>
    <div id="confirmation_content">
      <p class="greeting greeting_after">
      Great! Weâ€™ll be in touch. In the meantime, you can use this link to share this Airbo Board.
      </p>
      <div class="form_data">
        <%= text_field_tag "link_for_copy", public_board_url(@demo.public_slug) %>
        <!-- <span class="link_for_copy"><%=link_to public_board_url(@demo.public_slug)%> -->
      </div>
    </div>
  </div>
</div>
