<%if (params[:path]||'') == "via_explore_page_thumbnail" %>
  $('body.explores').find('.tile_liked.tile-<%=@tile.id%>').hide();
  $('body.explores').find('.tile_not_liked.tile-<%=@tile.id%>').show();
  <% t_cnt = get_tile_likes(@tile, current_user)%>
  <% if t_cnt > 0  %>
    $('body.explores').find('.tile_not_liked.tile-<%=@tile.id%>').find('.like_message').text(<%=t_cnt%>);
  <% else %>
    $('body.explores').find('.tile_not_liked.tile-<%=@tile.id%>').find('.like_message').empty();
  <% end %>
<%elsif (params[:path]||'') == "via_explore_page_tile_view" %>
  <% t_cnt = get_tile_likes(@tile, current_user)%>
  <% if t_cnt > 0 %>
    $('body.tile_previews').find('.like_message').find('i').show();
    $('body.tile_previews').find('.like_message').find('#like_value').text(<%=t_cnt%>);
    $('body.tile_previews').find('.like_message').find('#like_value').show();
    $('body.tile_previews').find('.like_message').find('#like_msg').show();
  <% else %>
    $('body.tile_previews').find('.like_message').find('i').hide();
    $('body.tile_previews').find('.like_message').find('#like_value').empty();
    $('body.tile_previews').find('.like_message').find('#like_value').hide()
    $('body.tile_previews').find('.like_message').find('#like_msg').hide();
  <% end %>
  $('body.tile_previews').find('#tile-not-like-<%=@tile.id%>').show();
  $('body.tile_previews').find('#tile-like-<%=@tile.id%>').hide();
<%else%>
  $('body.tile_previews').find('#tile-not-like-<%=@tile.id%>').show();
  $('body.tile_previews').find('#tile-like-<%=@tile.id%>').hide();
  $('body.tile_previews').find('#tile_likes_text').html('<%=escape_javascript(show_tile_likes(@tile, current_user))%>');
<%end%>
