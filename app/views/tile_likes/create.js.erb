<%if (params[:path]||'') == "via_explore_page_thumbnail" %>
  $('body.explores').find('.tile_not_liked.tile-<%=@tile.id%>').hide();
  $('body.explores').find('.tile_liked.tile-<%=@tile.id%>').show();
  $('body.explores').find('.tile_liked.tile-<%=@tile.id%>').find('.like_message').text(<%=get_tile_likes(@tile, current_user)%>);
<%elsif (params[:path]||'') == "via_explore_page_tile_view" %>
  $('body.tile_previews').find('.like_message').find('i').show();
  $('body.tile_previews').find('.like_message').find('#like_value').text(<%=get_tile_likes(@tile, current_user)%>);
  $('body.tile_previews').find('.like_message').find('#like_value').show();
  $('body.tile_previews').find('.like_message').find('#like_msg').show();
  $('body.tile_previews').find('#tile-not-like-<%=@tile.id%>').hide();
  $('body.tile_previews').find('#tile-like-<%=@tile.id%>').show();
<%else %>
  $('body.tile_previews').find('#tile-not-like-<%=@tile.id%>').hide();
  $('body.tile_previews').find('#tile-like-<%=@tile.id%>').show();
  $('body.tile_previews').find('#tile_likes_text').html('<%=escape_javascript(show_tile_likes(@tile, current_user))%>')
<%end%>
