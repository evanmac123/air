<!-- content -->
<table width="436" align="center" cellpadding="0" cellspacing="0" border="0" class="columnsNoPadding">
  <tr>
    <td style="font-family:Helvetica,Arial,sans-serif;font-size:24px;color:#4c4c4c;mso-line-height-rule:exactly;line-height:32px;padding-top:40px;padding-bottom:15px;" class="columnNormal">
      <%= link_to @presenter.email_heading, @presenter.general_site_url, @presenter.link_options.merge({style:'font-weight:500; font-size:24px; text-decoration:none;color:#4face0;', id: 'custom_headline'}) %>
           </td>
  </tr>
  <tr>
		<td id="custom_message" 
			style="font-family:Helvetica,Arial,sans-serif;font-size:16px;color:#a8a8a8;mso-line-height-rule:exactly;line-height:24px;padding-bottom:60px;word-break: break-word;" 
			class="columnNormal">
        <%= @presenter.custom_message_if_present %>
      </td>
  </tr>
</table>


<%= render partial: "tiles_digest_mailer/tiles_row", locals: {link_options: @presenter.link_options} %>
<%= render partial: 'mailer/main_button', locals: {
	button_text: 'See Your Tiles', 
	button_url: @presenter.general_site_url, 
	button_font_size: '24px', 
	button_url_options: @presenter.link_options, 
	hide_no_login: true, 
	works_on_mobile: @presenter.works_on_mobile? 
} 
%>
