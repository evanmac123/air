<% img_link_args = [@presenter.general_site_url, {style: "text-decoration:none;"}] %>
<% text_link_args = [@presenter.general_site_url, {style: "color:#{@presenter.color};text-decoration:none;display:block;vertical-align:middle;mso-line-height-rule:exactly;line-height:40px;border-radius:3px;", target: "_blank"}] %>

<div style="width:260px;display:inline-block;vertical-align:top;" class="wMax">
  <table align="center" cellpadding="0" cellspacing="0">
  <tr>
    <td align="center" style="padding-bottom:30px;">
      <table align="center" cellpadding="0" cellspacing="0" style="border-collapse:separate;box-shadow:0 0 3px 0 rgba(0, 0, 0, 0.2);border:solid 1px #dddddd;">
      <tr>
        <td width="240" align="center">
          <table width="100%" cellpadding="0" cellspacing="0">
          <tr>
            <td align="center">
              <%= link_to *img_link_args do %>
                <%= image_tag(tile.thumbnail(:email_digest), alt: tile.headline,  width: '240', style: "width:100%!important;height:auto!important;display:block;") %>
              <% end %>
            </td>
          </tr>
          </table>
          <table width="100%" cellpadding="0" cellspacing="0">
          <tr>
            <td height="120" align="left" valign="top" class="autoHeight">
              <table width="100%" cellpadding="0" cellspacing="0">
              <tr style="height:90px;border-bottom:1px solid #dde3e9">
                <td align="left" style="vertical-align:top;font-family: Avenir Next,'Avenir Next Airbo',Arial,Helvetica,sans-serif;font-size:16px;color:#3c3c3c;mso-line-height-rule:exactly;line-height:24px;font-weight:400;padding-top:10px;padding-left:10px;padding-right:10px;">
                  <%= tile.headline %>
                </td>
              </tr>
              <tr>
                <td class="column" style="width:100% !important;">
                  <table width="208" align="center" cellpadding="0" cellspacing="0" border="0" class="columnsNoPadding" style="width:100% !important;">
                    <tbody style="width: 100% !important;">
                      <tr>
                        <td style="font-family: Avenir Next,'Avenir Next Airbo',Arial,Helvetica,sans-serif; color:#2e2e2c;font-weight:500;font-size:14px;mso-line-height-rule:exactly;line-height:22px;padding-top:15px;padding-bottom:5px;padding-left:10px;padding-right:5px;width:25px;">
                          <%="Viewed:  #{pluralize(tile.total_views, 'time')} by #{pluralize(tile.unique_views, 'user')}"%>
                        </td>
                      </tr>
                      <tr>
                        <td style="font-family: Avenir Next,'Avenir Next Airbo',Arial,Helvetica,sans-serif; color:#2e2e2c;font-weight:500;font-size:14px;mso-line-height-rule:exactly;line-height:22px;padding-bottom:15px;padding-left:10px;padding-right:5px;width:25px;">
                          <%="Completed: #{pluralize(tile.tile_completions.count, 'user')}"%>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </tr>
              </table>
            </td>
          </tr>
          <tr>
            <td align="center" style="padding-bottom:10px;padding-left:10px;padding-right:10px;">
              <table width="100%" cellpadding="0" cellspacing="0" style="border-collapse:separate;border-radius:5px;border:solid 1px <%= @presenter.color%>;">
              <tr>
                <td height="40" align="center" style="font-family: Avenir Next,'Avenir Next Airbo',Arial,Helvetica,sans-serif;font-size:16px;color:<%= @presenter.color %>;white-space:nowrap;">
                  <%= link_to *text_link_args do %>
                    <%= @presenter.tile_button_copy %>
                  <% end %>
                </td>
              </tr>
              </table>
            </td>
          </tr>
          </table>
        </td>
      </tr>
      </table>
    </td>
  </tr>
  </table>
</div>
