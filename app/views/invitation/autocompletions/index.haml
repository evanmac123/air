- @matched_users.each do |u|
  - text = "#{u.name}, #{u.email}, #{u.slug}"
  .single_suggestion
    .image= default_avatar_tag(u)
    .info
      .bit= u.name
      .bit= u.email
      .bit= u.slug
    .clear
    .selected_referrer_id= u.id
    = content_tag :button, "Choose a different user", :class => "remove_referrer", :type => "button"
    