<% if current_user.is_a?(User) %>
  <%= form_tag invitation_dependent_user_invitation_path, class: "bg-gray-quiz dependent_email content_sections dependent_email_form" do %>
    <label>To</label>
    <%= text_field_tag "dependent_user_invitation[email]", "", placeholder: "example@email.com" %>

    <label>Subject</label>
    <%= text_field_tag "dependent_user_invitation[subject]", dependent_board_email_subject%>

    <label>Body</label>
    <%= text_area_tag "dependent_user_invitation[body]", dependent_board_email_body, rows: "4" %>

    <%= submit_tag "Send", class: "tile_button" %>
    <p>
      <%= link_to "Nevermind, I donâ€™t want to send an invitation.", "", class: "no_invitation righty" %>
    </p>
  <% end %>
<% else %>
  <div class="bg-gray-quiz dependent_email content_sections dependent_email_form">
    <p> You need to <%= link_to "sign in", root_path(sign_in: true) %> to invite your spouse. Or, <%= link_to "continue without inviting", "", class: "no_invitation"  %>.
    </p>
  </div>
<% end %>
