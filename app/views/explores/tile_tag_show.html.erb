<%= mp_track_page 'explore topic' %>

<div class='row'>
  <div class='large-12 columns client_admin_explore_tile_tag'>
    <ul class='large-12'>
      <li class='explore_section'>
        <%= link_to client_admin_explore_path(return_to_explore_source: 'Explore Topic Page - Back To Explore') do %>
          Explore:
        <% end %>
      </li>
      <li class='tile_tag'>
        <%= @tile_tag.topic.try(:name) || "No Topic" %>:
        <%= @tile_tag.title %>
      </li>
    </ul>
  </div>
</div>

<%= render partial: 'explores/tile_wall', locals: {tiles: @tiles} %>
