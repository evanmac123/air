%span
  %span.copy_message
    -if tile.copy_count > 0
      %div{:style => "display:inline-block;padding-right:2px"}
        = tile.copy_count
    = fa_icon 'copy'
  - copy_url = explore_copy_tile_path(tile_id: tile.id, path: :via_explore_page_thumbnail)
  - copy_link_text = current_user.copied_tile?(tile) ? 'Copied' : 'Copy'
  = link_to copy_link_text, '#', class: "copy_tile_link", data_url: copy_url
=image_tag "spinner_large.gif", style: "display: none", class: "spinner"



