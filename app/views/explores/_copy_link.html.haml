- cache [__FILE__, 'v3.pwd', presenter.cache_key] do
  %div
    .copy_message
      -if presenter.copy_count > 0
        .copy_count
          = presenter.copy_count
      = fa_icon 'copy'
    - copy_url = explore_copy_tile_path(tile_id: presenter.tile_id, path: :via_explore_page_thumbnail)
    = link_to presenter.copy_link_text, '#', class: "copy_tile_link", data_url: copy_url
  =image_tag "spinner_large.gif", style: "display: none", class: "spinner"
