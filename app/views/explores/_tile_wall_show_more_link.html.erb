<div id="tile_links">
  <div class="more_tiles_button">
    <%= link_to '#', class: 'explore_show_more_tiles show_more_tiles button', data: { 'tile-path' => path_for_more_tiles, 'tile-type' => tile_type, 'tile-count' => tile_count, 'target-selector' => target_selector }, disabled: all_tiles_displayed do %>
      <span class="show_more_tiles_copy">
        More <i class="fa fa-angle-down" aria-hidden="true" id="show_more_tiles_down_arrow"></i>
      </span>
      <i class="fa fa-spinner fa-spin fa-fw show_more_tiles_spinner", style="display: none"></i>
    <%end%>
  </div>
</div>
