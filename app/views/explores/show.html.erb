<div id="tile_wall_explore">
  <section class="manage_section" id="recommended_container" style="background:<%= $redis.hget("explore_customization", "recommended_tiles_background_color") %>">
    <%= render partial: 'explores/recommended_tiles' %>
  </section>
  <% TileFeature.scoped.each do |feature| %>
    <section class="manage_section" id="recommended_container" style="background:<%= feature.background_color %>">
      <%= render partial: 'explores/tile_feature', locals: { feature: feature } %>
    </section>
  <% end %>
  <section class="manage_section" id="collection_boards">
    <%= render partial: 'explores/collections' %>
  </section>
  <section class="manage_section" id="explore_tiles">
    <%= render partial: 'explores/explore_tiles' %>
  </section>
</div>
