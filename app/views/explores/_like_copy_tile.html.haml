-if current_user.likes_tile?(tile)
  .tile_liked
    = fa_icon 'smile-o'
    = show_my_liked_tile(tile)
    =link_to 'Liked', explore_tile_likes_path(tile_id: tile.id, path: :via_explore_page_thumbnail), method: :delete
-else
  .tile_not_liked
    = fa_icon 'smile-o'
    = show_unliked_tile(tile)
    = link_to 'Like', explore_tile_likes_path(tile_id: tile.id, path: :via_explore_page_thumbnail), method: :post

-if tile.is_copyable?
  - if current_user.copied_tile?(tile)
    .copied
      =fa_icon 'copy'
      = show_my_copied_tile(tile)
      - copy_url = explore_copy_tile_path(tile_id: tile.id, path: :via_explore_page_thumbnail)
      - if current_user.copied_tile?(tile)
        = link_to '#', id: "copy_tile_link", data_url: copy_url do
          Copied      
      - else
        = link_to '#', id: "copy_tile_link", data_url: copy_url do
          Copy      
  -else
    .not_copied
      =fa_icon 'copy'
      = show_uncopied_tile(tile)
      - copy_url = explore_copy_tile_path(tile_id: tile.id, path: :via_explore_page_thumbnail)
      - if current_user.copied_tile?(tile)
        = link_to '#', id: "copy_tile_link", data_url: copy_url do
          Copied      
      - else
        = link_to '#', id: "copy_tile_link", data_url: copy_url do
          Copy      
-else
  .not_copied
    =fa_icon 'minus-circle'
    Tile is view only
