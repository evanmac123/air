-if current_user.likes_tile?(tile)
  - display_liked = 'display:block;'
  - display_unliked = 'display:none;'
-else
  - display_liked = 'display:none;'
  - display_unliked = 'display:block;'

.tile_liked{class:"tile-#{tile.id}", style:display_liked}
  = fa_icon 'smile-o'
  %span.like_message
    = tile.like_count
  =link_to 'Liked', explore_tile_likes_path(tile_id: tile.id, path: :via_explore_page_thumbnail), method: :delete, remote: true
.tile_not_liked{class:"tile-#{tile.id}", style:display_unliked}
  = fa_icon 'smile-o'
  %span.like_message
    = tile.like_count
  = link_to 'Like', explore_tile_likes_path(tile_id: tile.id, path: :via_explore_page_thumbnail), method: :post, remote: true

-if tile.is_copyable?
  - if tile.copy_count>0
    %span.copied
      = render "copy_link", tile: tile
  - else
    %span.not_copied
      = render "copy_link", tile: tile

-else
  %span.view_only
    =fa_icon 'minus-circle'
    View only

