<%= yield :javascript %>
<% if Rails.env.test? %>
  <%= javascript_tag do %>
    $.ajaxSetup({ async: false });
  <% end %>
<% end %>

<!-- Off-canvas nav using jRespond -->
<script>
var jPM = $.jPanelMenu({
  menu: 'header nav',
  trigger: '#off-canvas-toggle a'
});


var jRes = jRespond([
  {
    label: 'small',
    enter: 0,
    exit: 768
  },{
    label: 'large',
    enter: 768,
    exit: 10000
  }
]);

jRes.addFunc({
  breakpoint: 'small',
  enter: function() {
    window.intercomDisabled = true;
    jPM.on();
  },
  exit: function() {
    jPM.off();
  }
});
</script>
