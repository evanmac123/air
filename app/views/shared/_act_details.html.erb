<%= cache [__FILE__, 'v4.ant', act, user] do %>
  <p class="user small_margin">
    <% if user.is_guest? %>
      <%= user.name %>
    <% else %>
      <%= link_to(user.name, user, :class => 'name-of-user') %>
    <% end %>
    <%= (act.text) %>
  </p>
<% end %>

<span class="when small_cap">
  <%= time_description %> ago
</span>
