<div id="login_modal" class="reveal-modal" data-reveal>
  <p>For security purposes please confirm your password.</p>
  <%= form_tag session_path do %>
    <%= hidden_field_tag "url_after_create", "#" %>
    <%= hidden_field_tag "session[email]", user.email %>
    <%= password_field_tag "session[password]" %>
    <%= submit_tag "Confirm Password" %>
  <% end %>

  <p>Not <%= user.email %>? <%= link_to 'Log in', root_path(sign_in: true) %> or <%= link_to "create a board here", new_demo_request_path %>.</p>
</div>
