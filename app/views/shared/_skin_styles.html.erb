<% if (skin = current_user.demo.skin) %>
  <style type="text/css" id="skin-styles">
    <%= background_url_skin_style 'div.header', 'header_background_url', skin  %>
    <%= color_skin_style '.header .inner-header #account a, .header .inner-header #account a:visited, .header .inner-header #account a:link', 'nav_link_color', skin %>
    <%= color_skin_style '.header .inner-header #account a.current-section, .header .inner-header #account a.current-section:visited, .header .inner-header #account a.current-section:link', 'active_nav_link_color', skin %>
    <%= color_skin_style '.act-details .user a, .top-scores a .name, .fan-column .associate-details a, .fan-column .associate-details a:visited', 'profile_link_color', skin %>
    <%= color_skin_style '.act-details .points .point-value', 'points_color', skin %>
    <%= color_skin_style '.top-scores .score', 'points_color', skin %>
    <%= background_color_skin_style '.acts #secondary h2', 'column_header_background_color', skin %>
  </style>
<% end %>
