<script>
var howItWorks = $('.how_it_works'),
    howItWorksMenu = $('.how_it_works ul');

function showHowItWorks() {
  howItWorks.click(function() {
    if ( howItWorksMenu.is(':visible') ) {
      howItWorksMenu.slideUp('fast');
      $(this).removeClass('toggled');
    } else {
      howItWorksMenu.slideDown('fast');
      $(this).addClass('toggled');
      return false;
    }
  });
  $('html').click(function() {
    if( howItWorksMenu.is(':visible') ) {
      howItWorksMenu.slideUp('fast');
      $(howItWorks).removeClass('toggled');
    } else {}
  });
  
}

var jPM = $.jPanelMenu({
  menu: 'header nav',
  trigger: '.off-canvas-toggle a'
});

var jRes = jRespond([
  {
    label: 'small',
    enter: 0,
    exit: 767
  },{
    label: 'large',
    enter: 768,
    exit: 10000
  }
]);

jRes.addFunc([
  {
    breakpoint: 'small',
    enter: function() {
      jPM.on();
      howItWorksMenu.show();
    },
    exit: function() {
      jPM.off();
    }
  },{
    breakpoint: 'large',
    enter: function() {
      showHowItWorks();
    },
    exit: function() {
      howItWorksMenu.show();
    }
  }
]);
</script>
