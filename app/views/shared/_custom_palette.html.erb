<meta name="custom-palette">
<%@primary_color = @palette.primary_color%>
<% @solid_filled_styles = "background: #{@primary_color}; border-color: #{@primary_color}; color: white;" %>
<% @solid_hover_styles = "opacity: .80;" %>
<% @unfilled_styles = "border-color: #{@primary_color}; color: #{@primary_color};" %>

<style>
<% if @palette.enable_reset %>
/*Mini Reset Styles */

/* Basic Styles */
/* ------------------ */
.act .avatar43 .points {
  border-color:  #dfdfdf;
  color: #dfdfdf; 
}

.tiles.tiles-index .viewer a#prev, 
.tiles.tiles-index .viewer a#next, 
.tile_previews.tile_previews-show .viewer a#prev, 
.tile_previews.tile_previews-show .viewer a#next {
  background: #e3e3e3;
  border-color: #ddd;
}

.tiles.tiles-index .viewer a#prev:hover, 
.tiles.tiles-index .viewer a#next:hover, 
.tile_previews.tile_previews-show .viewer a#prev:hover, 
.tile_previews.tile_previews-show .viewer a#next:hover {
  background: #ccc;
  border-color: #ccc;
}
.tiles.tiles-index .viewer a#prev:after, 
.tile_previews.tile_previews-show .viewer a#prev:after{
 border-right: 2em solid #f7f7f7;

}

.tiles.tiles-index .viewer a#next:after, 
.tile_previews.tile_previews-show .viewer a#next:after{
  border-left: 2em solid #f7f7f7;
}


h3, h4, h5, label {
  color:  <%=@palette.static_text_color %>;
}


body.tiles.tiles-index .core, 
body.tiles.tiles-index .content, 
body.suggested_tiles-new .core, 
body.suggested_tiles-new .content, 
body.suggested_tiles-show .core, 
body.suggested_tiles-show .content,
body.acts-index .user_container,
#tile_wall{
  background: <%=@palette.content_background_reset %>;
}

/* End Mini Reset Styles */
<%end%>

/* Tile Show */
/* ------------------ */
body.tiles.tiles-index .tile_holder .tile_quiz .tile_multiple_choice_answer .clicked_right_answer { 
  background: <%=@primary_color%> !important;
  border-color: <%=@primary_color%> !important;
}

body.acts-index #user_progress #tile_section #tile_progress_bar, 
body.tiles-index #user_progress #tile_section #tile_progress_bar{
  background: <%=@palette.tile_progress_background_reset %>;
  box-shadow: none;
}

body.tiles-index #user_progress .progress_header, 
body.acts-index #user_progress .progress_header {
  background: <%=@palette.tile_progress_background_reset %>;
 color: <%=@palette.static_text_color %>
}

body.tiles-index #user_progress, 
body.acts-index #user_progress {
 color: <%=@palette.static_text_color %>
}

body.tiles-index #user_progress #tile_section #tile_progress_bar #all_tiles, 
body.acts-index #user_progress #tile_section #tile_progress_bar #all_tiles {
  color: <%=@palette.tile_progress_all_tiles_text_reset %>;
}

body.tiles-index #user_progress #tile_section #tile_progress_bar #completed_tiles , 
body.acts-index #user_progress #tile_section #tile_progress_bar #completed_tiles{

  color: <%=@palette.tile_progress_completed_tiles_text_reset %>;
}

/* Prizes and Raffles */
/* ------------------ */
body.tiles-index .prize_box .tickets_row, 
body.acts-index .prize_box .tickets_row, 
body.client_admin-prizes .prize_box .tickets_row {

  background: <%=@primary_color%>;
}


body.tiles-index #user_progress #raffle_section.round_bar, 
body.acts-index #user_progress #raffle_section.round_bar{
  background: <%=@primary_color%>;
}

body.tiles-index #user_progress #raffle_section.round_bar .progress-radial .overlay, 
body.acts-index #user_progress #raffle_section.round_bar .progress-radial .overlay{
color: <%=@primary_color%>;

}


body.tiles-index .prize_box .prizes_container .prize_row .icon_container, 
body.acts-index .prize_box .prizes_container .prize_row .icon_container, 
body.client_admin-prizes .prize_box .prizes_container .prize_row .icon_container{
  color: <%=@primary_color%>;
}

body.tiles-index .prize_box .other_info_row .close_modal, 
body.acts-index .prize_box .other_info_row .close_modal, 
body.client_admin-prizes .prize_box .other_info_row .close_modal{
  color: <%=@primary_color%>;
  border-color: <%=@primary_color%>;
}


body.settings input[type="submit"], #search #find_button{
  background: <%=@primary_color%>; 
  border-color: <%=@primary_color%>;
}


body.tiles-index #user_progress #raffle_section.round_bar .progress-radial, 
body.acts-index #user_progress #raffle_section.round_bar .progress-radial{
  color: <%=@primary_color%>
}

#submit_tile {
<%=@unfilled_styles%>
}

body .find_users {
<%=@unfilled_styles%>
}

#tile_wall #tile_links .show_more_tiles {
<%=@solid_filled_styles%>
}

body .content .seemore a {
<%=@solid_filled_styles%>
}

#search #find_button {

<%=@solid_filled_styles%>
}

#submit_tile:active{
<%=@solid_filled_styles%>
}

body .content .seemore a:hover {
<%=@solid_filled_styles%>
<%=@solid_hover_styles%>
}
#search #find_button:hover {
<%=@solid_filled_styles%>
<%=@solid_hover_styles%>
}

body .find_users:hover {
<%=@solid_filled_styles%>
<%=@solid_hover_styles%>
}

#submit_tile:hover {
<%=@solid_filled_styles%>
<%=@solid_hover_styles%>
}

#tile_wall #tile_links .show_more_tiles:after,  
#tile_wall #tile_links .show_more_tiles:before{
  border-color: <%=@primary_color%>;
}

.tile_thumbnail .tile-wrapper:hover {
  border-bottom-color: <%=@primary_color%>;
}


body.tiles-index #user_progress #total_section #total_points, 
body.acts-index #user_progress #total_section #total_points {

color: <%=@primary_color%>;
}

body.tiles-index #user_progress #completed_tiles, body.acts-index #user_progress #completed_tiles {

background: <%=@primary_color%>;
}

body.tile.tile-show .tile_holder .tile_quiz .tile_points_bar .earnable_points, 
body.tile.tile-show .tile_holder .tile_quiz .tile_types .earnable_points, 
body.tile_previews-show .tile_holder .tile_quiz .tile_points_bar .earnable_points, 
body.tile_previews-show .tile_holder .tile_quiz .tile_types .earnable_points, 
body.tiles.tiles-index .tile_holder .tile_quiz .tile_points_bar .earnable_points, 
body.tiles.tiles-index .tile_holder .tile_quiz .tile_types .earnable_points{

background: <%=@primary_color%>;
}




</style>
