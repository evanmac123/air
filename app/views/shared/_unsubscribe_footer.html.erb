<% link_options ||= {} %>
<center>
  <table cellpadding="0" cellspacing="1" style="border-top:1px #dfdfdf solid; font-family: Helvetica, Arial, sans-serif; text-align:center; background:#dfdfdf;" width="600">
    <tr>
      <td height="30" style="line-height:0; font-size:0;">
        &nbsp;
      </td>
      <% if @forward_email_warning.present? %>
        <tr>
          <td style="font-size:12px; color: #50698c;">
            <%= @forward_email_warning %>
          </td>
        </tr>
        <tr>
          <td height="20" style="line-height:0; font-size:0;">
            &nbsp;
          </td>
        </tr>
      <% end %>
    </tr>
    <tr>
      <td style="font-size:12px; color: gray; padding: 0 75px;">
        <%= render 'copyright' %> Our mailing address is 1600 Main Street, Venice CA 90291.
        <% if @user.present? %>
          You received this email because your company uses Airbo by HEngage.
          <% if @user.claimed? %>
            <%= link_to "Update your contact preferences.", email_account_settings_link, link_options %>
          <% elsif @invitation_url %>
            After you
            <%= (link_to "sign up", @invitation_url, link_options) + ", " %>
            you can update your contact preferences.
          <% end %>
          <%= link_to "Unsubscribe", email_unsubscribe_link(@user), link_options %>
          from email communications.
          <tr>
            <td height="30" style="line-height:0; font-size:0;">
              &nbsp;
            </td>
          </tr>
        <% end %>
      </td>
    </tr>
  </table>
</center>
