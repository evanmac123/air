<%= render 'shared/append',
  :offset_var_name => 'actOffset',
  :new_content_length => acts.length,
  :append_target => '#user-acts',
  :new_content => (render :partial => 'shared/act', :collection => acts, :as => :act, :formats => [:html]),
  :spinner_selector => '#see-more-spinner'
%>

$('#see-more').parents('form.button_to').show();

<% acts.each do |act| %>
  mpq.track('saw act', <%= raw({:act_id => act.id, :game => act.demo.name, :rule_id => act.rule_id}.to_json) %>);
<% end %>
