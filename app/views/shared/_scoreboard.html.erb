<div class="column-header">
  <h2 class="first">Scoreboard</h2>
</div>

<ul class="top-scores">
  <% users.each do |user| %>
    <li>
      <%= user.ranking %>.
      <%= link_to user do %>
        <span class="name"><%= user.name %></span>
        <% if user.won_at %>
          <span class="other-user-winning-time">Won Game!</span>
        <% end %>
      <% end %>
      <span class="score">
        <span class="score-value"><%= user.points %></span> points
      </span>
    </li>
  <% end %>
</ul>
