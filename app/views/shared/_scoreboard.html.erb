<h2>Scoreboard</h2>

<ol class="top-scores">
  <% users.each do |user| %>
    <li value="<%= user.ranking %>">
      <%= link_to user do %>
        <span class="name"><%= user.name %></span>
      <% end %>
      <span class="score">
        <span class="score-value"><%= user.points %></span> points
      </span>
      <% if user.won_at %>
        <span class="other-user-winning-time">won on <%= user.won_at.winning_time_format %></span>
      <% end %>
    </li>
  <% end %>
</ul>
