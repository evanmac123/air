<% cache [__FILE__, 'v1.pwd', board.name, board.id] do %>
  <div class="board_wrapper">
    <div class="row">
      <div class="small-6 columns">
        <%= content_tag 'h3', class: "board_name", "data-demo_id" => board.id, contenteditable: true do %>
          <%= board.name %>
        <% end %>
      </div>

      <div class="small-6 columns board_control_icons" data-demo_id="<%= board.id %>">
        <span class="board_save_error"></span>
        <%= content_tag 'span', class: 'board_saving' do %>Saving...<% end %>
        <%= link_to 'Save', '#', "data-demo_id" => board.id, class: 'save_board_name' %>
        <%= link_to 'Edit', '#', "data-demo_id" => board.id, class: 'edit_board_name_link' %>
        <%= content_tag 'span', class: 'board_saved', "data-demo_id" => board.id do %>Saved!<% end %>
      </div>
    </div>
  </div>
<% end %>
