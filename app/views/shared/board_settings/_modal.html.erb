<div id="leave_board_safety_modal" class="reveal-modal">
  <div class="row">
    <div class="small-9 columns">
      <h1>DELETE</h1>
    </div>
    <div class="small-3 columns close_safety_block">
      <a id="close_safety_modal" class="small-1" href="#">Cancel</a>
    </div>
  </div>

  <p id="warning_first_part">
    <% if user.has_only_one_board? %>
      Your account will be permanently deleted from Airbo.
    <% else %>
      Your account will be permanently deleted from this board.
    <% end %>
  </p>
  <p id="warning_second_part">Confirm by typing the word "DELETE" in all caps.</p>

  <%= form_tag '#', id: "leave_board_form", method: "delete" do %>
    <%= text_field_tag '#', nil, placeholder: "Type \"DELETE\" in all caps" %>
    <%= submit_tag 'Leave Board', disabled: true %>
  <% end %>
</div>

<div id="board_settings" class="reveal-modal">
  <div class="row">
    <div class="small-11 columns">
      <h1>Board Settings</h1>
    </div>
    <div class="close_board_settings_container">
      <a id="close_board_settings" class="small-1" href="#">Close</a>
    </div>
  </div>

  <% if user.boards_as_admin.present? %>
    <div id="admin_board_controls">
      <div class="row">
        <div class="small-12 columns">
          <h2 class="control_section_header">Boards You Manage</h2>
        </div>
      </div>
      <% user.boards_as_admin.sort_by(&:name).each do |board| %>
        <%= render "shared/board_settings/admin_board", board: board %>
      <% end %>
    </div>
  <% end %>

  <% if user.boards_as_regular_user.present? %>
    <div id="user_board_controls" class="<%= user.divider_class %>">
      <div class="row board_wrapper user_section_header">
        <div class="board_name_column">
          <h2 class="control_section_header">Boards You Participate In</h2>
        </div>

        <div class="email_column">
          <div class="row email_settings_header_wrapper">
            <p id="email_settings_header" class="">Email Settings</p>
          </div>
          <div class="row switch_container">
            <p class="email_settings_subheader">New Tiles</p>
            <p class="email_settings_subheader">Reminder</p>
          </div>
        </div>

        <div class="delete_column"></div>
      </div>
      <% user.boards_as_regular_user.sort_by(&:name).each do |board| %>
        <%= render "shared/board_settings/user_board", board: board, as_admin: false, followup_is_muted: user.followup_is_muted(board), digest_is_muted: user.digest_is_muted(board)  %>
      <% end %>
    </div>
  <% end %>
</div>  

<% if user.can_open_board_settings? %>
  <%= content_for :javascript do %>
    <%= javascript_tag do %>
      $().ready(function(){
        bindBoardSettingsControls();
        if(<%= params[:pop_board_settings_modal].present? %>){
          window.openBoardSettings();
        }
      });
    <% end %>
  <% end %>
<% end %>

