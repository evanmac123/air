<div id="board_settings" class="reveal-modal">
  <div id="board_settings_content_wrapper">
    <div class="row">
      <h1 class="large-12">Board Settings</h1>
    </div>

    <a id="close_board_settings" href="#">Close</a>

    <div class="row" id="admin_controls">
      <h3 class="large-12">Boards You Manage</h3>
      <% boards_as_admin.each do |board| %>
        <div class="row">
          <div class="large-8 columns">
            <h3><%= board.name %></h3>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>  

<%= content_for :javascript do %>
  <%= javascript_tag do %>
    $('#close_board_settings').click(function(event) {
      event.preventDefault();
      $('#board_settings').foundation('reveal', 'close');
    });
  <% end %>
<% end %>

