<% if tiles.present? %>
  <div id="tile_wall">
    <div class="all_tile_thumbnails row">
      <% tiles.each do |tile| %>
        <div class="tile_thumbnail">
          <%= render 'shared/displayable_tile', displayable_tile: tile %>
        </div>
      <% end %>
      <% odd_row_length = tiles.length % tile_batch_size_increment %>
      <% if odd_row_length != 0 %>
        <% (tile_batch_size_increment - odd_row_length).times do %>
          <div class='placeholder_tile tile_thumbnail'></div>
        <% end %>
      <% end %>
      <span id="justifier" style="visibility:hidden; width:35%; display:inline-block;">&nbps;</span>
      <%= render 'shared/tiles_wall_client_admin_tools' %>
    </div>
  </div>
<% else %>
  You've completed all available tiles! Check back later for more.
<% end %>
