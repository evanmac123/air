<div class="row">
  <div class="large-8 columns">
    <%= content_tag 'h3', class: 'board_name', "data-demo_id" => board.id, contenteditable: as_admin do %>
      <%= truncate board.name, length: 36 %>
    <% end %>
  </div>

  <div class="large-4 columns reserved_for_controls">
    reserved for controls
  </div>
</div>

<% if as_admin %>
  <div class="row">
    <div class="large-8 columns">
      <%= link_to 'Save', '#', "data-demo_id" => board.id, class: 'save_board_name' %>
      <%= content_tag 'span', class: 'board_saved', "data-demo_id" => board.id do %>Saved!<% end %>
    </div>
  </div>
<% end %>
