<%= form_for tile_builder_form, tile_builder_form.form_params do |f| %>
  <%= render 'shared/tiles/form/image_library', tile_images: tile_images, form: f %>
  <div class="tile_holder_container">
    <div class="tile_form_holder">
      <div class="large-8 large-centered columns builder-width">
        <div class="tile_holder">
          <%= render 'shared/tiles/form/image_preview', form: f %>
          <div class="builder_content tile_builder_section">
            <%= render 'shared/tiles/form/headline_and_supporting_content_fields', form: f, tile: tile_builder_form.tile %>
          </div>
          <%= render 'shared/tiles/form/question_and_answer_section', form: f %>
        </div>
        <%= render 'shared/tiles/form/submit_button', submit_button_text: tile_builder_form.submit_button_text, return_button_text: tile_builder_form.return_button_text, form: f %>
      </div>
    </div>
  </div>
<% end %>

<%= s3_uploader_form post: client_admin_tiles_url, as: "tile_builder_form[upload_url]", style: "visibilty:hidden;height:0px;width:0px" do %>
  <%= file_field_tag :file, multiple: true, id:"media_file" %>
<% end %>

