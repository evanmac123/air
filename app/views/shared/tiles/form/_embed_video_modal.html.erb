<% render layout: "/shared/modals/standard_modal", locals: {modal_id: "embed_video_modal", modal_class: "bg-user-side"} do %>
  <h2>Add Video</h2>
  <p>
    Paste your IFRAME video embed code below. Tiles currently support Vimeo, Youtube, Wistia, and Kaltura video players. If you have questions please contact support@airbo.com
  </p>
  <%= text_area_tag "embed_video_field", "", rows: 5 %>
  <label class="err embed_video_err" style="display:none;">
    Can't save video. Wrong format.
  </label>
  <%= submit_tag "Save", id: "submit_embed_video", disabled: true, class: "button" %>
<% end %>
