<%= render layout: "/shared/modals/standard_modal", locals: {modal_id: "embed_video_modal", modal_class: "bg-user-side"} do %>
  <div class="row">
    <div class="small-12 columns">
      <%= text_area_tag "embed_video_field", "", rows: 7, placeholder: "Paste iframe video embed code from Vimeo, Youtube, Wistia or Kaltura" %>
      <label class="err embed_video_err" style="display:none;">
        Can't save video. Wrong format.
      </label>
    </div>

    <div class="small-6 columns">
      <%= submit_tag "Save", id: "submit_embed_video", disabled: true, class: "button" %>
    </div>
    <div class="small-6 columns">
      <%= link_to "How video works", "https://www.airbo.com/support#AddaVideo", class: "righty gray-5", target: "_blank" %>
    </div>
  </div>
<% end %>
