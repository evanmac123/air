<div class="image_library">
  <div class="tile_images">
    <%= render 'shared/tiles/form/image_uploader', form: form %>
    <% @tile_images.each do |tile_image| %>
      <%= render 'shared/tile_images/tile_image', tile_image: tile_image %>
    <% end %>
  </div>
  <div class="pagination">
    <%= link_to 'Next Page', client_admin_tile_images_path(page: 1), rel: 'next' %>
  </div>
</div>

<%= js_at_end do %>
  window.imageLibrary();
  window.imageLibraryScroll("<%= image_path 'spinner_large.gif' %>");
<% end %>
