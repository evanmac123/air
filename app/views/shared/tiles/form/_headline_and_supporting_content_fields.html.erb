<div id="tile_headline" class="content_sections">
  <%= form.text_area :headline, {maxlength: 75, placeholder:'Give this tile a headline'} %>
</div>
<div id="tile_supporting_content" class="content_sections">
  <%= content_tag :div, "", data: {placeholder: "Tell your users more about this topic.", field: "tile_builder_form_supporting_content"}, id: "supporting_content_editor", class: "medium-editable text-input", maxlength: 600, exceed_maxlength: true%>
  <%= form.text_area :supporting_content %>
</div>
<div id="tile_external_link" class="content_sections">
  <%= form.text_field :link_address, placeholder: "Add a link (optional)" %>
  <%= form.hidden_field :position %>
</div>

