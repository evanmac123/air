<div id="login_modal" class="reveal-modal" data-reveal>
  <p>For security purposes please confirm your password.</p>
  <%= form_tag session_path do %>
    <%= hidden_field_tag "session[email]", current_user.email %>
    <%= password_field_tag "session[password]" %>
    <%= submit_tag "Confirm Password" %>
  <% end %>

  <p>Not <%= current_user.email %>? <%= link_to 'Log in', new_session_path %> or <%= link_to "create a board here", new_board_path %>.</p>
</div>
