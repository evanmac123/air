      <a href="/"><%= image_tag "logo.png", "alt" => "H.Engage" %></a>
    </div>

    <nav id="navigation" class="large-10 columns"> <!-- offcanvas menu -->

      <div class="large-4 columns push-8 nav_items">
        <a class="sign_in_button" href="/sign_in">Sign in</a>
        <div class="how_it_works">
