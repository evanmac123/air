<%# OPTZ: Cache this %>
<% wrapper_classes = %w(switch round) %>
<% wrapper_classes << "#{email_type}_wrapper" %>
<% wrapper_classes << "disabled" if disabled %>

<% paddle_classes = %w(green-paddle) %>
<% paddle_classes << "disabled" if disabled %>

<%= content_tag 'div', class: wrapper_classes, data: {board_id: board_id} do %>
  <% radio_button_name = "mute_#{email_type}_#{board_id}" %>
  <%= radio_button_tag radio_button_name, false, !original_setting, class: "#{email_type}_unmute", disabled: disabled, data: {mute_url: mute_url, board_id: board_id} %>
  <%= radio_button_tag radio_button_name, true, original_setting, class: "#{email_type}_mute", disabled: disabled, data: {mute_url: mute_url, board_id: board_id} %>
  <%= content_tag 'span', '', class: paddle_classes %>
<% end %>
