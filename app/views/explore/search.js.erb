// my tiles - when clicking more
if (<%= params[:my_tiles_page].present? %>) {
  $('#my-tiles').append('<%= escape_javascript render(partial: 'explore/tiles', locals: { tiles: @my_tiles, section: 'Explore' }) %>')
  $('#more-my-tiles').replaceWith('<%= escape_javascript render(partial: 'explore/search_more_link', locals: { tiles: @my_tiles, tiles_type: :my_tiles, q: params[:q] }) %>')
}

// explore tiles - when clicking more
if (<%= params[:explore_tiles_page].present? %>) {
  $('#explore-tiles').append('<%= escape_javascript render(partial: 'explore/tiles', locals: { tiles: @explore_tiles, section: 'Explore' }) %>')
  $('#more-explore-tiles').replaceWith('<%= escape_javascript render(partial: 'explore/search_more_link', locals: { tiles: @explore_tiles, tiles_type: :explore_tiles, q: params[:q] }) %>')
}
