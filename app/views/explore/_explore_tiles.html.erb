<div class="explore-tiles-container">
  <div class="row">
    <div class="large-12 columns">
      <% if header.present? %>
        <h4 class="explore-headers non-link"><%= header %></h4>
      <% end %>
      <div class="endless_scroll_content_container tile_wall_explore" data-page="<%= params[:page] || 1 %>" data-count="<%= tiles.count %>" data-path="<%= more_tiles_path %>">
        <%= render partial: 'explore/tiles', locals: { tiles: tiles, section: "Explore" } %>
      </div>
      <div class="js-endless-scroll-loading text-center" style="display:none;">
        <i class="fa fa-spinner fa-spin fa-3x text-center" style="color:#48BFFF;margin-top:30px;"></i>
      </div>
    </div>
  </div>
</div>
