<section class="campaign-header org_container">
  <div class="row">
    <div class="large-12 columns">
      <div class="org-profile">
        <h4 class="explore-sub-page-header"><%= organization.name.titleize %></h4>
        <% unless organization.internal %>
          <p class="explore-org-stats">Customer since <%= organization.created_at.strftime("%B %Y") %></p>
        <% end %>

        <p class="explore-org-stats"><span class="stat"><%= number_with_delimiter(organization.rdb[:total_tiles_created].get) %></span> Tiles</p>
        <p class="explore-org-stats"><span class="stat"><%= number_with_delimiter(organization.rdb[:total_tile_viewings].get) %></span> Views</p>
      </div>
    </div>
  </div>
</section>
