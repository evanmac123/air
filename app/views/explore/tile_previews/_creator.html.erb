<div class="creator">
  <% is_default_logo = !tile.demo.logo.present? %>
  <%= image_tag tile.demo.logo(:thumb), class: "company_logo #{is_default_logo ? 'default_logo' : ''}" %>
  <span class="creator_name">
    <% if tile.creator && tile.organization %>
      Tile by <%= tile.creator.try(:name) %> at <%= link_to "#{tile.organization.name.titleize}", explore_organization_path(tile.organization) %>
    <% elsif tile.creator %>
      Tile by <%= tile.creator.try(:name) %>
    <% elsif tile.organization %>
      Tile by <%= link_to "#{tile.organization.name.titleize}", explore_organization_path(tile.organization) %>
    <% end %>
  </span>
</div>
