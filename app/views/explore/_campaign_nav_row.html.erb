<section class="with-divider pt-0">
  <div class="row channel-row">
    <div class="large-12 columns">
      <div class="channels flickity-channels-carousel">
        <% channels.each do |channel| %>
          <% if channel.tiles.present? %>
            <% cache channel do %>
              <div class="carousel-cell channel-image-container" style="background-image: url('<%= channel.tiles.first.thumbnail %>')" data-slug="<%= channel.slug %>" data-name="<%= channel.name %>" data-id="<%= channel.id %>" data-path="<%= explore_channel_path(channel) %>">
                <div class="channel_shadow_overlay"></div>
                <div class="channel_overlay"></div>
                <h3 class="name"><%= channel.image_header  %></h3>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>
