<% new_content = @followers.map do |follower| %>
  <% render 'shared/new_associate', :associate => follower, :button_type => (@all_friend_ids.include?(follower.id) ? :unfollow : :follow) %>
<% end %>

<%= render "shared/append",
  :offset_var_name    => 'followersOffset',
  :new_content_length => @followers.length,
  :new_content        => raw(new_content.join('')),
  :append_target      => "#followers",
  :spinner_selector   => "#fans .spinner"
%>

$('#fans .see-more').hide();
