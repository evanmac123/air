<% img_link_args = [@presenter.general_site_url(requested_tile_id: tile.id), {style: "text-decoration:none;"}] %>
<% text_link_args = [@presenter.general_site_url(requested_tile_id: tile.id), {style: "color:#{@explore_digest.defaults(:color).present? ? interpolate!(@explore_digest.defaults(:color)) : "#48bfff"};text-decoration:none;display:block;vertical-align:middle;mso-line-height-rule:exactly;line-height:40px;border-radius:3px;", target: "_blank"}] %>

<div style="width:260px;display:inline-block;vertical-align:top;" class="wMax">
  <table align="center" cellpadding="0" cellspacing="0">
  <tr>
    <td align="center" style="padding-bottom:30px;">
      <table align="center" cellpadding="0" cellspacing="0" style="border-collapse:separate;box-shadow:0 0 3px 0 rgba(0, 0, 0, 0.2);border:solid 1px #dddddd;">
      <tr>
        <td width="240" align="center">
          <table width="100%" cellpadding="0" cellspacing="0">
          <tr>
            <td align="center">
              <%= link_to *img_link_args do %>
                <%= image_tag(tile.thumbnail(:email_digest), alt: tile.headline,  width: '240', style: "width:100%!important;height:auto!important;display:block;") %>
              <% end %>
            </td>
          </tr>
          </table>
          <table width="100%" cellpadding="0" cellspacing="0">
          <tr>
            <td height="120" align="left" valign="top" class="autoHeight">
              <table width="100%" cellpadding="0" cellspacing="0">
              <tr style="height:80px;">
                <td align="left" style="vertical-align:top;font-family: Avenir Next,'Avenir Next Airbo',Arial,Helvetica,sans-serif;font-size:16px;color:#3c3c3c;mso-line-height-rule:exactly;line-height:24px;font-weight:600;padding-top:10px;padding-left:10px;padding-right:10px;">
                  <%= tile.headline %>
                </td>
              </tr>
              <tr>
                <td align="left" valign="top" style="font-family: Avenir Next,'Avenir Next Airbo',Arial,Helvetica,sans-serif;font-size:13px;color:#404040;mso-line-height-rule:exactly;line-height:19px;padding-top:10px;padding-bottom:10px;padding-left:10px;padding-right:10px;">
                  <% if tile.airbo_created? %>
                    by Airbo
                  <% elsif tile.organization %>
                    by <%= tile.organization.name.titleize %>
                  <% end %>
                </td>
              </tr>
              </table>
            </td>
          </tr>
          <tr>
            <td align="center" style="padding-bottom:10px;padding-left:10px;padding-right:10px;">
              <table width="100%" cellpadding="0" cellspacing="0" style="border-collapse:separate;border-radius:5px;border:solid 1px <%= @explore_digest.defaults(:color).present? ? interpolate!(@explore_digest.defaults(:color)) : "#48bfff" %>;">
              <tr>
                <td height="40" align="center" style="font-family: Avenir Next,'Avenir Next Airbo',Arial,Helvetica,sans-serif;font-size:16px;color:<%= @explore_digest.defaults(:color).present? ? interpolate!(@explore_digest.defaults(:color)) : "#48bfff" %>;white-space:nowrap;">
                  <%= link_to *text_link_args do %>
                    &nbsp;See&nbsp;Tile&nbsp;
                  <% end %>
                </td>
              </tr>
              </table>
            </td>
          </tr>
          </table>
        </td>
      </tr>
      </table>
    </td>
  </tr>
  </table>
</div>
