<table bgcolor="<%= @explore_digest.defaults(:color).empty? ? "#48bfff" : interpolate!(@explore_digest.defaults(:color)) %>" align="center" cellpadding="0" cellspacing="0">
<tr>
  <td width="600" height="100" align="center">
    <table align="center" cellpadding="0" cellspacing="0">
    <tr>
      <td width="72" align="left" style="padding-left:20px;">
        <a href="https://www.airbo.com" style="text-decoration:none;" target="_blank">
          <%= default_logo %>
        </a>
      </td>
      <td width="408" align="left" style="font-family: Avenir Next,'Avenir Next Airbo',Arial,Helvetica,sans-serif;font-size:14px;color:#ffffff;mso-line-height-rule:exactly;line-height:21px;padding-top:20px;padding-bottom:10px;padding-left:20px;padding-right:20px;">
        <h3 style="font-weight:200; font-size:25px; margin:0;">
          <%= @explore_digest.defaults(:header).empty? ? "Airbo Explore" : interpolate!(@explore_digest.defaults(:header)) %>
