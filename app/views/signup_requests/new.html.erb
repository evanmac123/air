<div class="join-view">
  <div class="row">
    <div class="logo">
      <%= link_to "/" do %>
        <div class="logo_image"></div>
      <% end %>
    </div>
    <div class="small-12 small-centered columns join-form">
      <h1>Welcome to Airbo</h1>
      <div class="line-separator"></div>
      <h4>Weâ€™ll email you with more info on how to get started with Airbo.</h4>

      <%= form_tag(signup_requests_path, id: "standalone-marketing-site-form") do %>
        <label class="input_label">Full name</label>
        <%= text_field_tag "lead_contact[name]" %>

        <label class="input_label">Email address</label>
        <%= text_field_tag "lead_contact[email]" %>

        <label class="input_label">Phone number</label>
        <%= text_field_tag "lead_contact[phone]" %>

        <label class="input_label">Company name</label>
        <%= text_field_tag "lead_contact[organization_name]" %>
        <label class="input_label">Company size</label>
        <%= select_tag "lead_contact[organization_size]", options_for_select(["less than 100 employees", "100-500 employees", "500-1000 employees", "1000-5000 employees", "more than 5000 employees"]) %>
        <%= hidden_field_tag "lead_contact[source]", "Inbound: Signup Request" %>
        <div class="text-right">
          <%= submit_tag "Submit", class: "join-button button center" %>
        </div>

        <p class="terms" id="t-and-c-notice">By submitting this form or using this site, you are agreeing to the <%= link_to 'terms and conditions', terms_path, target: '_blank' %>.</p>
      <% end %>
    </div>
  </div>
</div>
