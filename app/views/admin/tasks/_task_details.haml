.task_details
  .name
    .label Name
    .value= task.name
  .short_desc
    .label Short Description
    .value= task.short_description 
  .long_desc
    .label Long Description
    .value= task.long_description
  .completion_triggers
    - if task.has_demographic_trigger? 
      %p Complete demographics

    - if task.rule_triggers.present? 
      %p="Rules (any of the following#{', referrer required' if task.rule_triggers.first.referrer_required}):"
      %ul
        - task.rule_triggers.each do |rule_trigger| 
          %li.brown= rule_trigger.rule.primary_value_text
  .other
    - if task.survey_trigger.present? 
      %p 
        Survey: 
        = task.survey_trigger.survey.name 


    - if task.only_manually_triggerable? 
      %p Manual only.
  .bonus
    .label Bonus Points
    .value= task.bonus_points