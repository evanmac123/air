<div class="row ">
  <div class="columns large-12">
    <h3 class="blue">Admin | home</h3>
    <%= form_for :user, :url => admin_lost_user_path do |f| %>
      <label  style="display:inline">Find a lost user</label>
      <%= f.text_field :email, :placeholder => 'email', style: "display:inline" %>
      <%= f.submit "Find", class: "button success" %>
    <% end %>
  </div>
</div>
<br>
<div class="row ">
  <div class="columns large-6">
    <h3 class="blue">Boards</h3>
    <p>
      <%= link_to 'Create New Board', new_admin_demo_path, class: "button"  %>
    </p>
    <table>
      <thead>
        <tr>
          <th>Board</th>
          <th>Number of Users</th>
          <th>Dependent Board</th>
        </tr>
      </thead>
      <tbody>
        <% @demos.order("LOWER(name)").each do |demo| %>
          <tr>
            <td><%= link_to demo.name, admin_demo_path(demo) %></td>
            <td><%= demo.users.count %></td>
            <% if demo.dependent_board_id %>
              <td><%= link_to demo.dependent_board_id, admin_demo_path(demo.dependent_board_id) %></td>
            <% else %>
              <td></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="columns large-6">
    <h2>Game-Agnostic Features</h2>
    <p>
    <%= link_to 'Tags', admin_tags_path %>
    </p>
    <p>
    <%= link_to 'Standard characteristics', admin_characteristics_path %>
    </p>
    <p>
    <%= link_to 'Explore Digest', new_admin_explore_digest_path %>
    </p>
    <p>
    <%= link_to 'Image Library', admin_tile_images_path %>
    </p>
    <p>
      <%= link_to 'Edit Support Page', edit_admin_support_path %>
    </p>
    <p>
    <%= link_to 'Customer Metrics & KPIs', organization_metrics_path %>
    </p>
    <p>
    <%= link_to 'Reports', admin_client_kpi_report_path %>
    </p>
  </div>
  </div>
</div>
