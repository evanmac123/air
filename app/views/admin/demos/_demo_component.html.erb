<div class="card-component">
  <div class="card-header">
    <div class="card-title-group">
      <div class="row">
        <div class="columns large-6 small-12">
          <h3 class="card-title"><%= @demo.name %></h3>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="card-content">
      <div class="row">
        <div class="columns small-6">
          <%= image_tag @demo.logo.url, alt: "#{@demo.name} logo" %>
        </div>
        <div class="columns small-6">
          <%= link_to "View Board", current_board_path({ board_id: @demo.id, admin_view_board: true }), method: :patch, class: "right outlined-alt green button", form_class: "inline", target: "_blank" %>
        </div>
      </div>
      <div class="row">
        <div class="large-6 columns">
          <p>ID: <%= @demo.id %></p>
          <p>Organization: <%= link_to @demo.organization_name, admin_organization_path(@demo.organization) %></p>
        </div>
      </div>
      <%= render "demo_simple_form", demo: @demo %>
      <div class="row">
        <div class="small-12 columns">
          <h3><%= link_to "Edit advanced settings for this board", edit_admin_demo_path(@demo), class: "right" %></h3>
        </div>
      </div>
    </div>
    <% if @demo.upload_in_progress %>
      <div class="card-content">
        <h4 class="red">Upload in progress...</h4>
        <%= button_to "Reset upload-in-progress status", admin_reset_bulk_upload_path(@demo), method: :delete, class: "button outlined red", form_class: "inline" %>
      </div>
    <% end %>
  </div>
</div>
