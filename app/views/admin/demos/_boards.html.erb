<h3 class="blue">Boards</h3>
<p>
<%= link_to 'Create New Board', new_admin_demo_path, class: "button"  %>
</p>
<div class="row ">
  <div class="columns large-12">
    <br>
    <input type="text" name="demo-search" id="demo-search" placeholder="search demos" class="form-control demo-title">
    <br>
  </div>
  <div class="columns large-12">
    <button type="button" name="commit" value="small" id:"filter-maybe" class="button demo-button filter-button" data-type="size">small</button>
    <button type="button" name="commit" value="medium" id:"filter-yes" class="button demo-button filter-button" data-type="size">medium</button>
    <button type="button" name="commit" value="enterprise" id:"filter-now" class="button demo-button filter-button" data-type="size">enterprise</button>
    <button type="button" name="commit" value="enterprise" id:"filter-now" class="button demo-button filter-button" data-type="paidStatus" data-paid="true">paid</button>
    <button type="button" name="commit" value="enterprise" id:"filter-now" class="button demo-button filter-button" data-type="paidStatus" data-paid="false">unpaid</button>
  </div>
</div>
<br>
<table>
  <thead>
    <tr>
      <th>Board</th>
      <th>Number of Users</th>
      <th>Dependent Board</th>
    </tr>
  </thead>
  <tbody>
    <% @demos.each do |demo| %>
      <% user_count = demo.user_count.to_i %>
      <tr id="<%= demo.id %>" class="demo" data-companySize="<%= demo.company_size(user_count) %>" data-isPaid="<%= demo.is_paid %>">
        <td class="title"><%= link_to demo.name, admin_demo_path(demo), class: "blue" %></td>
        <td class="company-size"><%= user_count %></td>
        <% if demo.dependent_board_id %>
          <td><%= link_to demo.dependent_board_id, admin_demo_path(demo.dependent_board_id), class: "blue" %></td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
