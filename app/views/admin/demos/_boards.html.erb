<div class="row ">
  <div class="columns large-12">
    <input type="text" name="demo-search" id="demo-search" placeholder="search demos" class="form-control demo-title">
  </div>
</div>
<br>
<table>
  <thead>
    <tr>
      <th>Board</th>
      <th>Number of Users</th>
      <th>Dependent Board</th>
    </tr>
  </thead>
  <tbody>
    <% demos.each do |demo| %>
      <% user_count = demo.user_count.to_i %>
      <tr id="<%= demo.id %>" class="demo"  data-isPaid="<%= demo.is_paid %>">
        <td class="title"><%= link_to demo.name, admin_demo_path(demo), class: "blue" %></td>
        <td class="company-size"><%= user_count %></td>
        <% if demo.dependent_board_id %>
          <td><%= link_to demo.dependent_board_id, admin_demo_path(demo.dependent_board_id), class: "blue" %></td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
