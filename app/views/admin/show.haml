.admin

  %h1.first Admin
  #which_game
    %p You are currently in
    = form_for :user, @current_user, :url => admin_user_transfer_path, :html=>{:method=>:put} do
      = select :user, :demo_name, Demo.all.collect(&:name), :selected => @current_user.demo.name
      = submit_tag "Push", :id => :transfer_user, :class => :way_off_screen
    = content_for :javascript do
      :javascript 
        $("option").click(function(){
          $("#transfer_user").click();
        });
     
  %h2 Games
  %ul.demos
    - @demos.each do |demo| 
      - link_text = demo.name 
      - extra_info = [] 
      - extra_info << "#{demo.victory_threshold} points to win" if demo.victory_threshold 
      - extra_info << "victory email to #{demo.victory_verification_email}" if demo.victory_verification_email 
      - extra_info << "victory SMS to #{demo.victory_verification_sms_number}" if demo.victory_verification_sms_number 
      - link_text << " (#{extra_info.join(', ')})" unless extra_info.empty? 

      %li= link_to link_text, admin_demo_path(demo)
  %p= link_to 'Create New Game', new_admin_demo_path 
  
  %h2 Game-Agnostic Features
  %p= link_to "Standard playbook rules", admin_rules_path 
  %p= link_to "Forbidden rules", admin_forbidden_rules_path 
  %p= link_to 'Tags', admin_tags_path
  %p= link_to 'Bad Words', admin_bad_words_path 
  %p= link_to 'Standard characteristics', admin_characteristics_path
  
