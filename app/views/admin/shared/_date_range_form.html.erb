
<%= form_tag path, method: :get,  class: "custom report-filter" do %>
  <div class="row row-collapse" >
    <div class="columns small-3">
      <%= select_tag :interval_type, options_for_select({weekly: "Weekly", monthly: "Monthly"}), { class: "interval_custom_drop" } %>
    </div>

    <div class="columns small-4 end">
      <span class="builtin-date-range" >
        <%= select_tag :date_range, options_for_select(FinancialsReporterService::REPORT_DATE_RANGE_TYPES ), { class: "date_range_custom_drop"} %>
      </span>
      <div class="custom-date-range" style="display:none">
        <%= text_field_tag :sdate, @sdate, class: "datepicker", readonly: true %>
        <%= text_field_tag :edate, @edate, class: "column small-2 datepicker", readonly: true %>
        <%= link_to "Done", "#", class: "button button-small" %>
      </div>
    </div>
  </div>

  <%end%>
