<%if @dates.any? %> 

  <div class="chart-data" data-plotdata ="<%=@table_data.to_json%>"> </div>
  <div class="table-container" >
    <table class="kpi sticky">
      <thead>
        <tr>
          <th>Start Date</th>
          <%@dates.each do |date| %>
            <th><%=simple_format_by_type "date", date%></th>
          <%end%>
        </tr>
      </thead>
      <%@rep.sections.each do |section_label, fields| %>
        <tbody>
          <tr class="separator">
            <th><%=section_label%></th>
            <td colspan='<%=@table_data["from_date"][:values].count%>'>&nbsp;</td>
          </tr>
          <%fields.each do |field|%>
            <tr>
              <th colspan= '<%=@table_data[field]["colspan"]%>' title='<%=@table_data[field]["hint"]%>' class='<%=@table_data[field]["type"]%> indent-<%=@table_data[field]["indent"]%>'><%=@table_data[field]["label"]%></th>
              <%@table_data[field]["values"].each do |val| %>
                <td class='<%=@table_data[field]["css"]%>'><%=simple_format_by_type @table_data[field]["type"], val %></td>
              <%end%>
            <%end%>
            </tr>
        </tbody>
      <%end%>
    </table>
  </div>

<%end%>
