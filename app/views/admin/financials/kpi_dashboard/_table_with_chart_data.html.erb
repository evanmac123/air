<%if @dates.any? %> 
  <div class="chart-data" data-plotdata ="<%=@table_data.to_json%>">
    <div class="row ">
      <div class="large-12 columns">
        <div class="table-container sticky-component">
          <table class="kpi sticky">
            <thead>
              <tr>
                <th>Metric</th>
                <%@dates.each do |date| %>
                  <th><%=simple_format_by_type "date", date%></th>
                <%end%>
              </tr>
            </thead>
            <%FinancialsReporterService.sections.each do |section_label, fields| %>
              <tbody>
                <tr class="separator">
                  <th><%=section_label%></th>
                  <td colspan='<%=@table_data["report_date"][:values].count%>'>&nbsp;</td>
                </tr>
                <%fields.each do |field|%>
                  <tr>
                    <th colspan= '<%=@table_data[field]["colspan"]%>' title='<%=@table_data[field]["hint"]%>' class='<%=@table_data[field]["type"]%> indent-<%=@table_data[field]["indent"]%>'><%=@table_data[field]["label"]%></th>
                    <%@table_data[field]["values"].each do |val| %>
                      <td class='<%=@table_data[field]["css"]%>'><%=simple_format_by_type @table_data[field]["type"], val %></td>
                    <%end%>
                  <%end%>
                  </tr>
              </tbody>
            <%end%>
          </table>
        </div>
      </div>
    </div>
  </div>
<%end%>
