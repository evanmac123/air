<div class="row">
  <div class="columns small-12">
    <h3>New Organization</h3>
    <div class="row">
      <div class="columns small-6 small">
        <%= form_for([:admin, @registration]) do |f| %>
          <% if @registration.errors.any? %>
            <div id="error_explanation">
              <ul>
                <% @registration.errors.full_messages.each do |msg| %>
                  <li style="color: red;"><%= msg %></li>
                <% end %>
              </ul>
            </div>
            <br>
          <% end %>

          <fieldset>
            <legend>Organization</legend>
            <br>
            <%= f.label :organization_name, "Name" %>
            <%= f.text_field :organization_name %>
            <br>
          </fieldset>
          <br>
          <fieldset>
            <legend>First Client Admin</legend>
            <br>
            <%= f.label :user_name, "Name" %>
            <%= f.text_field :user_name %>

            <%= f.label :user_email, "Email" %>
            <%= f.text_field :user_email %>
            <br>
            </fieldset>
            <br>
            <fieldset>
              <legend>Board</legend>
              <br>
              <%= f.label :board_name, "Name (defaults to organization name)" %>
              <%= f.text_field :board_name %>

              <%= f.label :board_template_id, "Choose Board to copy Tiles from" %>
              <%= f.select :board_template_id, options_from_collection_for_select(org_registrations_demos_to_select_from, :id,  :name_and_org_name, org_registrations_default_board_id), class: "airbo-chosen-select" %>
            <br>
          </fieldset>
          <br>
          <br>
          <%= f.submit "Submit",  class: "button"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
