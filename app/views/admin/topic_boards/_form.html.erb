<%=form_for [:admin, @topic_board] do |f| %>

  <%= f.label :topic_id, "Topic" %>
  <%= f.select :topic_id, options_from_collection_for_select(@topics, :id,  :name, f.object.topic_id), {include_blank: true}, class: "airbo-chosen-select" %>
  <br>

  <%= f.label :demo_id, "Board" %>
  <%=f.select :demo_id, options_from_collection_for_select(@demos, :id,  :name, f.object.demo_id), {include_blank: true}, class: "airbo-chosen-select" %>
  <br>

  <%= f.label :cover_image, "Cover Image"  %>
  <%= f.file_field :cover_image, { id:"file_input" } %>
  <br>

  <%= f.label :is_library do %>
    Is Library? <%= f.check_box :is_library %>
  <% end %>

  <%= f.label :is_onboarding do %>
    Is Onboarding? <%= f.check_box :is_onboarding %>
  <% end %>

  <%= f.submit "Save",class: "button right" %>

  <%= link_to "Create New Topic", new_admin_topic_path %>
<%end%>
<%=link_to "Library/Onboarding Boards List", admin_topic_boards_path %>
