<div class="row">
  <div class="columns small-12">
    <h3>Explore Digest Email</h3>
    <%= form_for [:admin, @explore_digest] do |f| %>
      <div class="row">
        <div class="columns small-6">
          <%= render "digest_defaults" %>
        </div>
      </div>
      <div class="row">
        <div class="columns small-10">
          <h3>Features</h3>
          <%= f.submit "Add feature", id: 'add_feature', class: "button" %>
          <div class="features-container">
            <div class="panel feature-section">
              <legend>Feature 1</legend>
              <br>
              <div class="add-feature-form">
                <%= label_tag "features[1][headline]", "Headline" %>
                <%= text_field_tag "features[1][headline]", @explore_digest.features(1, :headline) %>

                <%= label_tag "features[1][headline_icon_url]", "Headline Icon URL" %>
                <%= text_field_tag "features[1][headline_icon_url]", @explore_digest.features(1, :headline_icon_url) %>

                <%= label_tag "features[1][feature_message]", "Feature Message" %>
                <%= text_area_tag "features[1][feature_message]", @explore_digest.features(1, :feature_message), rows: 5, columns: 60 %>

                <%= label_tag "features[1][tile_ids]", "Tile Ids (in order and comma separated)" %>
                <%= text_field_tag "features[1][tile_ids]", @explore_digest.features(1, :tile_ids).try(:split, ", "), { placeholder: "1, 2, 3, 4, 5, 6" } %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="columns small-12">
          <br>
          <%= f.submit "Save", class: "button" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
