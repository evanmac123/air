<div class="row">
  <div class="columns small-12">
    <h3>Campaigns</h3>
    <div class="row">
      <div class="columns small-2">
        <%= link_to "New", new_admin_campaign_path, class: "button"  %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="columns small-12">
    <div class="panel">
      <table class="sortable tablesorter">
        <thead>
          <tr>
            <th>Name</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Active?</th>
            <th>Edit</th>
          </tr>
        </thead>
        <tbody>
          <% @campaigns.each do |campaign| %>
            <tr class="resource-row">
              <td><%= campaign.name %></td>
              <td><%= "#{campaign.created_at.to_date.to_formatted_s(:long_ordinal)}" %></td>
              <td><%= "#{campaign.updated_at.to_date.to_formatted_s(:long_ordinal)}" %></td>
              <td><%= campaign.active %></td>
              <td><%= link_to "Edit", edit_admin_campaign_path(campaign) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
