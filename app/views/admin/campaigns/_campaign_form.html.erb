<div class="row">
  <div class = "columns small-11 admin-tile-campaign" data-campaign = "<%= campaign.id %>">
    <div class="panel">
      <%= form_for([:admin, campaign]) do |f| %>
        <div id="response_explanation">
        </div>
        <br>
        <div class="row image-row">
          <div class="large-12 columns">
            <%= f.label :name, "Name" %>
            <%= f.text_field :name, placeholder: "Wellness" %>
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns">
            <%= f.label :description, "Description"  %>
            <%= f.text_area :description %>
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns">
            <%= f.label :icon_link, "Icon Link"  %>
            <%= f.text_field :icon_link %>
          </div>
        </div>
        <div class="row">
          <div class="large-6 columns">
            <%= f.label :demo_id, "Board" %>
            <%= f.select :demo_id, options_from_collection_for_select(demos, :id,  :name, f.object.demo_id), {include_blank: true}, class: "airbo-chosen-select" %>
          </div>
        </div>
        <div class="row">
          <div class="large-6 columns">
            <%= f.label :ongoing, "Ongoing?" %>
            <%= f.check_box :ongoing %>
          </div>
          <div class="large-6 columns">
            <%= f.label :active, "Active?" %>
            <%= f.check_box :active %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="large-6 columns">
            <%= f.label :public_explore, "Show Campaign in public Explore?" %>
            <%= f.check_box :public_explore %>
          </div>
          <div class="large-6 columns">
            <%= f.label :private_explore, "Share content across your boards?" %>
            <%= f.check_box :private_explore %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="large-2 columns">
            <%= f.submit "Save", class: "button" %>
          </div>
        </div>
      <% end %>

      </div>
  </div>
</div>
