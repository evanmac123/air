<%= render layout: 'admin_modal', locals: { id: 'lead-contact-respond-modal' } do %>
  <div class="columns small-8 small-offset-2">
  <%= form_tag(signup_requests_path, id: "landing_info_request_form") do %>
    <label class="input_label">Full name</label>
    <%= text_field_tag "lead_contact[name]", nil, disabled: true %>

    <label class="input_label">Email</label>
    <%= text_field_tag "lead_contact[email]", nil, disabled: true %>

    <label class="input_label">Phone number</label>
    <%= text_field_tag "lead_contact[phone]", nil, disabled: true %>

    <label class="input_label">Lead Organization</label>
    <%= text_field_tag "lead_contact[company]" %>
    <div class="match-organization">
      <label class="input_label">Match an existing Organization</label>
      <%= select_tag "lead_contact[existing_company]", options_for_select(["org"]), prompt: "" %>
    </div>
    <div class="row">
      <div class="columns small-6">
        <label class="new-organization">
          <%= check_box_tag 'lead_contact[new_organization]' %>
          New Organization?
        </label>
      </div>
      <div class="columns small-4">
        <%= button_to "Search", "", id: "organization-search", class: "button success center" %>
      </div>
    </div>
    <div class="respond-form-second-part hidden">
      <label class="input_label">Company size</label>
      <%= select_tag "lead_contact[size]", options_for_select(["less than 100 employees", "100-500 employees", "500-1000 employees", "1000-5000 employees", "more than 5000 employees"]) %>
      <%= submit_tag "Submit", class: "join-button button tiny" %>
    </div>
  <% end %>
  </div>
<% end %>
