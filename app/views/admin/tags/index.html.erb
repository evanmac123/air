<h1>Listing tags</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.name %></td>
    <td><%= tag.description %></td>
    <td><%= link_to 'Show', admin_tag_path(tag) %></td>
    <td><%= link_to 'Edit', edit_admin_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', admin_tag_path(tag), :confirm => 'Are you sure?', :method => :delete, :controller => "admin/tags" %></td>
  </tr>
<% end %>
</table>

