<div class="client-admin-kpi-dashboard">
  <div class="chart-data">
    <div class="row ">
      <div class="large-12 columns">
        <div class="table-container">
          <table>
            <thead>
              <tr>
                <td>&nbsp;</td>
                <% @report_data.keys.each do |date| %>
                  <td><%= date %></td>
                <%end%>
              </tr>
            </thead>
            <% Reporting::ClientKPIReport.sections.each do |section_label, kpis| %>
              <tbody>
                <tr class="separator">
                  <th><%= section_label %></th>
                  <td colspan='<%= @report_data.count %>'>&nbsp;</td>
                </tr>
                <% kpis.each do |kpi| %>
                  <tr>
                    <th><%= Reporting::ClientKPIReport.kpi_fields[kpi][:label] %></th>
                    <% @report_data.each do |date, report| %>
                      <td><%= simple_format_by_type(Reporting::ClientKPIReport.kpi_fields[kpi][:type], report[kpi]) %></td>
                    <%end%>
                  <%end%>
                  </tr>
              </tbody>
            <%end%>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
