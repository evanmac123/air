
<div class="row">

  <div class="columns small-12 small-centered">
<h1> Metrics and KPIs </h1>


<%= render "cust_kpi_menu", active: "kpi" %>
  </div>
</div>
<div class="row">

  <div class="columns small-12 small-centered">
    <%=form_tag organization_metrics_path do %> 
      <table>
        <caption>Reporting Period</caption>
        <thead>
          <tr>
            <th>Start</th>
            <th>End</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%=text_field_tag "sdate", @kpi.sdate, type: :date%></td>
            <td><%=text_field_tag "edate",@kpi.edate, type: :date%></td>
    <td><%=submit_tag "Get Data", class:"button td-button right"%></td>
            
          </tr> 
        </tbody>
      </table>
    <table class="first-column-header" width="100%">
      <thead>
        <tr>
          <th>Metric</th>
          <th>Value</th>
        </tr>
      </thead>
      <tbody>
        <tr><th>Starting Customers</th><td><%=@kpi.active_organizations_during_period%></td></tr>
        <tr><th>Customers Added</th><td><%=@kpi.added_organizations_during_period%></td></tr>
        <tr><th>Possible Churn</th><td><%=@kpi.possible_churn_during_period%></td></tr>
        <tr><th>Churned</th><td><%=@kpi.churned_during_period%></td></tr>
        <tr><th>Starting MRR</th><td><%=simple_money_format @kpi.mrr_during_period%></td></tr>
        <tr><th>MRR Added</th><td><%=simple_money_format @kpi.mrr_added_during_period%></td></tr>
        <tr><th>New Customer MRR</th><td><%=simple_money_format @kpi.new_customer_mrr_added_during_period%></td></tr>
        <tr><th>Upgrade MRR </th><td><%=simple_money_format @kpi.mrr_upgrades_during_period%></td></tr>
        <tr><th>MRR Possible Churn</th><td><%=simple_money_format @kpi.mrr_possibly_churning_during_period%></td></tr>
        <tr><th>MRR Churned</th><td><%=simple_money_format @kpi.mrr_churned_during_period%></td></tr>
        <tr><th>Percent MRR Churn</th><td>%<%=@kpi.percent_mrr_churn_during_period%></td></tr>
        <tr><th>Net MRR Churn</th><td>%<%=@kpi.net_mrr_churn_during_period%></td></tr>
        <!--
        <tr><th>Active Contracts</th><td><%#@kpi.active_contracts_during_period%></td></tr>
        <tr><th>Added Contracts</th><td><%#@kpi.added_contracts_during_period%></td></tr>
        <tr><th>Upgrade ARR Added</th><td><%#@kpi.arr_added_from_upgrades_during_period%></td></tr>
        <tr><th>New Customer Arr</th><td><%#@kpi.new_customer_arr_added_during_period%></td></tr>
        <tr><th>ARR Added</th><td><%#@kpi.arr_added_during_period%></td></tr>
        <tr><th>ARR</th><td><%#@kpi.arr_during_period%></td></tr>
        <tr><th>Arr Possible Churn</th><td><%#@kpi.arr_possibly_churning_during_period%></td></tr>
        -->
      </tbody>
    </table>

    <%=link_to "Download CSV", organization_metrics_path(sdate:@kpi.sdate, edate: @kpi.edate, format: :csv),  class:"button right"%> 
  <%end%>
  </div>
</div>



