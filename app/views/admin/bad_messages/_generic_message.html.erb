<% message_dom_id = "generic_" + dom_id(message) %>
<div class='message' id='<%= message_dom_id %>'>
  <%= render 'message_header', :message => message, :message_dom_id => message_dom_id %>

  <div class="hideable-parts">
    <%= render 'message_body', :message => message %>

    <%= render 'message_replies', :message => message %>

    <%= reply_link 'Reply and move to watch list', message %>
  </div>
</div>
