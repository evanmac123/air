%h2.first
  = link_to "Admin", admin_path
  »
  = link_to @demo.name, admin_demo_path(@demo)
  »
  Peer Invitations

- if @invitation_count
  %h2
    = @invitation_count
    invitations sent from
    = @start_time_description
    to
    = @end_time_description

= form_tag admin_demo_peer_invitations_path(@demo), :method => 'get' do |form|
  = label_tag "start_time", "Start at"
  = text_field_tag "start_time"
  = label_tag "end_time", "End at"
  = text_field_tag "end_time"
  = submit_tag "Count invitations"
