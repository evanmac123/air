<div class="row">
  <div class="external-form-wrapper small-12 large-6 large-centered columns" id="unsubscribe-form">
    <h2>Are you sure you want to unsubscribe?</h2>
    <p><%= @unsubscribe_service.copy_for_new_unsubscribe %></p>
    <%= form_tag unsubscribe_path do %>
      <%= hidden_field_tag :user_id, @unsubscribe_service.user_id %>
      <%= hidden_field_tag :demo_id, @unsubscribe_service.demo_id %>
      <%= hidden_field_tag :email_type, @unsubscribe_service.email_type %>
      <%= hidden_field_tag :token, @unsubscribe_service.token %>
      <%= submit_tag "Unsubscribe" %>
    <% end %>
  </div>
</div>
