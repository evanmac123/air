<div class="share-module-header">
  <div>
    <h3><%= shares_follow_ups_header(@follow_up_emails) %> <a href="http://learning.airbo.com/the-airbo-platform/features/automate-tiles-digests" target="_blank"></a></h3>
  </div>
</div>
<% if @follow_up_emails.present? %>
  <table class="followups border-less">
    <tbody>
      <% @follow_up_emails.each do |follow_up| %>
        <tr id="fu_<%=follow_up.id%>">
          <td class="subject"><span><%= truncate(follow_up.subject_before_sent, length:50) %></span> </td>
          <td class = "send_on"><%= follow_up.send_on.to_time.to_s(:tile_digest_email_sent_at) %></td>
          <td class="actions">
            <%= link_to "Edit", edit_client_admin_tiles_follow_up_email_path(follow_up), class: "link edit", data:{action: "edit"}  %>
            <%= link_to "Send Now", client_admin_tiles_follow_up_email_path(follow_up),
              class: "link now ", data:{action:"now"} %>
            <%= link_to "Cancel", client_admin_tiles_follow_up_email_path(follow_up),
              class: "link destroy ", data:{action: "destroy"}%>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
