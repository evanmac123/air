.public_board_controls
  = render :partial => 'client_admin/shares/public_url_display'
  %p If on, anyone with this link can access this board and sign-up to be a user.
  - if @board_is_public
    %p 
      This board is currently public. Send the link below to people you'd like to join. 
    = link_to "Make Private", client_admin_public_board_path(current_user.demo.id), id: "make_private", remote: true, method: 'delete'
    = image_tag "spinner.gif", id: "spinner", style: "display: none"

  - else
    %p 
      This board is not currently public.
    = link_to "Make Public", client_admin_public_boards_path, id: "make_public", remote: true, method: 'post'
    = image_tag "spinner.gif", id: "spinner", style: "display: none"

= content_for :javascript do
  :javascript
    $(document).on('keydown keyup keypress', '#public_board_field', function(event) {
      // PREVENT NERFING OF CONTROL KEYS
      event.preventDefault();
    });

    $(document).on('click', '#public_board_field', function(event) {
      event.preventDefault();
      $(event.target).focus().select();
    });
