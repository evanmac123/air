<div class="topics ">
  <div class="row">
    <div class="columns small-12 small-centered">
      <h1 class="text-center" >Content Library</h1>
    </div>
  </div>

  <div class="row">
    <div class="columns small-12 large-12 large-centered">
      <p class="text-center">
      The Content Library is an actively maintained set of Boards containing professionally crafted tiles devoted to a specific HR priority.</br/>
      </p>
    </div>
  </div>
</div>
<div class="topics" style="margin:20px">
  <% @boards.each do |board| %>
    <div class="tile_container">
        <div class="topic-board-div">
          <%= render partial: "pages/landing/topic", locals: {
            board: board,
            path: stock_board_path(library_slug: board.public_slug)
            } %>
        </div>
    </div>
  <% end %>
</div>
