<ul id="confirm-add-user">
  <li id="toggle-more-options"><a href="#">More options</a></li>
  <li id="add-user-button">
    <%= submit_tag submit_button_text %>
  </li>

  <% if show_delete_link %>
    <%= link_to "Delete user",
      client_admin_user_path(user),
       confirm: "Deleting users is irrevocable. There is no undo. All the history we have on this user (activities, connections, everything) will be gone forever if you push this button.", method: :delete ,
       id: "delete-user" 
    %>
  <% end %>
</ul>

<% content_for :javascript do %>
  <%= javascript_tag do %>
    $('.clear-form').click(function(event) {
      event.preventDefault();
      $('#single-form input[type=reset]').click();
    });
  <% end %>
<% end %>
