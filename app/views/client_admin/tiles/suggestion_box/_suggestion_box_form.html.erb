<%
  display_all_users = demo.everyone_can_make_tile_suggestions
  display_specific_users = !display_all_users
%>

<%= form_for demo, url: client_admin_suggestions_access_path, html: {id: "suggestion_box_form"} do |form| %>
  <%= render partial: 'client_admin/tiles/suggestion_box/access_to_suggestion_switcher', locals: { form: form, display_all_users: display_all_users, display_specific_users: display_specific_users } %>

  <%= render partial: 'client_admin/tiles/suggestion_box/all_users', locals: { display_all_users: display_all_users } %>

  <%= render partial: 'client_admin/tiles/suggestion_box/specific_users', locals: { users: users, display_specific_users: display_specific_users } %>  

  <div class="control_buttons">
    <%= form.submit 'Save', id: "save_suggestion_box" %>
    <%= link_to 'Cancel', '', id: "cancel_suggestion_box" %>
  </div>
<% end %>