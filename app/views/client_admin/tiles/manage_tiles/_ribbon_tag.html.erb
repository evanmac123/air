<div class="ribbon-tag"
  style="<%=
    "background-color:#{presenter.ribbon_tag_color};height:#{height}px;position:absolute;bottom:#{full_size ? '0' : '119'}px;padding:#{full_size ? '13' : '5'}px 1vw 0px 1vw;opacity:1;left:0;"
  %>"
>
  <span class="ribbon-text"
    style="<%=
      "color:#{presenter.ribbon_tag_font_color};font-size:#{full_size ? '1.1' : '0.9'}rem;font-weight:100;letter-spacing:0.3px;"
      %>"
  >
    <%= presenter.ribbon_tag_name %>
  </span>
  <div
    style="<%=
      "width:0;height:0;border-left:#{height/2}px solid transparent;border-right:#{height/2}px solid transparent;position:absolute;right:-#{height/2}px;border-bottom:#{height/2}px solid #{presenter.ribbon_tag_color};bottom:0;"
    %>"
  ></div>
  <div
    style="<%=
      "width:0;height:0;border-left:#{height/2}px solid transparent;border-right:#{height/2}px solid transparent;position:absolute;right:-#{height/2}px;border-top:#{height/2}px solid #{presenter.ribbon_tag_color};top:0;"
    %>"
  ></div>
</div>
