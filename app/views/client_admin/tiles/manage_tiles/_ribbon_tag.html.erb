<div class="ribbon-tag"
  style="<%=
    "background-color:#{presenter.ribbon_tag_color};height:28px;position:absolute;bottom:119px;padding:5px 1vw 0px 1vw;opacity:1;left:0;"
  %>"
>
  <span class="ribbon-text"
    style="<%=
      "color:#{presenter.ribbon_tag_font_color};font-size:0.9rem;font-weight:100;letter-spacing:0.3px;"
      %>"
  >
    <%= presenter.ribbon_tag_name %>
  </span>
  <div
    style="<%=
      "width:0;height:0;border-left:14px solid transparent;border-right:14px solid transparent;position:absolute;right:-14px;border-bottom:14px solid #{presenter.ribbon_tag_color};bottom:0;"
    %>"
  ></div>
  <div
    style="<%=
      "width:0;height:0;border-left:14px solid transparent;border-right:14px solid transparent;position:absolute;right:-14px;border-top:14px solid #{presenter.ribbon_tag_color};top:0;"
    %>"
  ></div>
</div>
