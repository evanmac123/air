<% if presenter.has_tile_stats? %>
  <div class="tile_stats">
    <div class="unique_views stat_action has-tip tip-bottom js-open-tile-stats-modal" data-tooltip='unique_views' data-href="<%= client_admin_tile_tile_stats_path(presenter)%>" title="Unique Views">
        <%= fa_icon 'users' %>
        <%= presenter.unique_views %>
    </div>
    <div class="views stat_action has-tip tip-bottom js-open-tile-stats-modal" data-tooltip='total_views' data-href="<%= client_admin_tile_tile_stats_path(presenter) %>" title="Total Views">
      <%= fa_icon 'eye' %>
      <%= presenter.total_views %>
    </div>
    <div class="completions stat_action has-tip tip-bottom js-open-tile-stats-modal" data-tooltip='interactions' data-href="<%= client_admin_tile_tile_stats_path(presenter) %>" title="Interactions">
      <%= fa_icon 'check' %>
      <%= presenter.tile_completions_count %>
    </div>
  </div>
  <% if presenter.shows_creator? && presenter.has_creator? %>
    <div class="creator">
      By:
      <%= presenter.creator %>
    </div>
  <% end %>
<% end %>
