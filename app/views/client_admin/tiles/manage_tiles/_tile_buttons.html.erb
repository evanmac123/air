<% if presenter.has_tile_buttons? %>
  <ul class="tile_buttons">
    <% if presenter.has_activate_button? %>
      <li class="activate_button">
        <%= link_to api_client_admin_tile_sorts_path(presenter), class: "button  update_status", data: { action: "post", status: Tile::ACTIVE, "tile-id " => presenter.tile_id} do %>
          <%= presenter.post_link_text %>
        <% end %>
      </li>
    <% end %>

    <% if presenter.has_archive_button? %>
      <li class="archive_button">
        <%= link_to api_client_admin_tile_sorts_path(presenter), class: "button update_status", data: {action: "archive", status: Tile::ARCHIVE, "tile-id" => presenter.tile_id} do %>
          Archive
        <% end %>
      </li>
    <% end %>

   <% if presenter.has_unarchive_button? %>
      <li class="archive_button">
        <%= link_to api_client_admin_tile_sorts_path(presenter), class: "button update_status", data: {action: "unarchive", status: Tile::ACTIVE, "tile-id" => presenter.tile_id} do %>
         Post Again
        <% end %>
      </li>
    <% end %>

    <% if presenter.has_accept_button? %>
      <li class="accept_button">
        <%= link_to api_client_admin_tile_sorts_path(presenter), class: "accept button ",  data: {action: "accept", status: Tile::DRAFT, "tile-id" => presenter.tile_id } do %>
          Accept
        <% end %>
      </li>
    <% end %>

    <% if presenter.has_ignore_button? %>
      <li class="ignore_button">
        <%= link_to api_client_admin_tile_sorts_path(presenter), class:"update_status button outlined", data: {action: "ignore", status:Tile::IGNORED, "tile-id" => presenter.tile_id} do %>
          Ignore
        <% end %>
      </li>
    <% end %>

    <% if presenter.has_undo_ignore_button? %>
      <li class="undo_ignore_button">

        <%= link_to api_client_admin_tile_sorts_path(presenter), class: "update_status button  outlined", data: {action: "unignore", status: Tile::USER_SUBMITTED, "tile-id" => presenter.tile_id} do %>
          Undo Ignore
        <% end %>
      </li>
    <% end %>

    <% if presenter.has_incomplete_edit_button? %>
      <li class="incomplete_button">
        <%= link_to edit_client_admin_tile_path(presenter),  class: "button edit red", data:{action: "edit", "tile-id" => presenter.tile_id, status: presenter.status} do %>
          Edit
        <% end %>
      </li>
    <% end %>

    <% if presenter.has_incomplete_destroy_button? %>
      <li class="destroy pill right">
        <%= link_to client_admin_tile_path(presenter, page: 'Edit'), class: "delete_tile", data: { action: "delete", "tile-id" => presenter.tile_id}  do %>

          <%= fa_icon 'trash' %>
        <% end %>
      </li>
    <% end %>

    <% if presenter.has_menu? %>
      <li class="pill more right">
        <%= tile_thumbnail_menu(presenter) %>
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
      </li>
    <% end %>

    <% if presenter.has_edit_button? %>
      <li class="edit_button pill right">
        <%= link_to edit_client_admin_tile_path(presenter), class: "edit",  data:{action: "edit", "tile-id" => presenter.tile_id, status: presenter.status} do %>
          <%= fa_icon 'pencil' %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>
