- cache [__FILE__, 'v11.ant', presenter.cache_key] do
  .tile_container{data: {"tile-id" =>"#{presenter.tile_id}"}}
    .tile_thumbnail{class: presenter.type, id: "single-tile-#{presenter.tile_id}"}
      %div.tile-wrapper
        = link_to presenter.show_tile_path, class:'tile_thumb_link' , data:{action: "show"} do
          .tile_thumbnail_image
            = image_tag presenter.thumbnail
          .activation_dates
            = presenter.timestamp
          .headline
            .text
              = presenter.headline
          .shadow_overlay
          .tile_overlay
        = render partial: 'client_admin/tiles/manage_tiles/tile_buttons', locals: { presenter: presenter }
      = render partial: 'client_admin/tiles/manage_tiles/tile_stats', locals: { presenter: presenter }


