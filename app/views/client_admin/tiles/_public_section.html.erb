<%#    $rollout.activate_user(:public_tile, current_user)%>
<%# if $rollout.active?(:public_tile, current_user) %>
  <div class="share_options">
    <div class='row'>
    <ul class='columns'>
      <li class="share_to_explore">
        <div class="switch small round share_explore">
          <%= form.radio_button :is_public, true, id: 'share_on' %>
          <%= form.radio_button :is_public, false, id: 'share_off' %>

          <span class='green-paddle'></span>
        </div>
        <div class="share_to_explore_message">
          Share to explore page
        </div>
      </li>

      <li class="allow_copying">
        <div class="switch small round allow_copy">

          <%= form.radio_button :is_copyable, true, id: 'allow_copying_on' %>
          <%= form.radio_button :is_copyable, false, id: 'allow_copying_off' %>

          <span class='green-paddle'></span>
        </div>
        <div class="allow_copying_message">
          Allow Copying
        </div>          
      </li>

      <li class="add_tag">
        <%= text_field_tag 'add-tag', nil, placeholder: 'Add Tag' %>
        <div class='tag_alert'>Add a tag to continue</div>
        <ul class="tile_tags">
          <% form.object.tile_tags.each do |tile_tag| %>
            <li id='<%=tile_tag.id%>'>
              <%=tile_tag.title%>
              <%=fa_icon 'times'%>
            </li>
          <% end %>
        </ul>  
        <%= form.text_field :tile_tag_ids %>
      </li>
    </ul>
    </div>
    <div id="tag-autocomplete-target"></div>
  </div>

  <% content_for :javascript do %>
    <%= javascript_tag do %>
      bindTagNameSearchAutocomplete('#add-tag', '#tag-autocomplete-target', '<%= client_admin_tile_tags_path %>');
    <% end %>
  <% end %>
<%# end %>
