<% if tile.active? %>
  <%= link_to 'Deactivate this tile', client_admin_tile_path(tile, update_status: Tile::ARCHIVE), :method => :put, :class => "tile_control tile_turn_off" %>
<% else %>
  <%= link_to 'Activate this tile', client_admin_tile_path(tile, update_status: Tile::ACTIVE), :method => :put, :class => "tile_control tile_turn_on" %>
<% end %>
