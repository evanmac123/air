%tr
  - columns.size.times do |col|
    - tile = columns[col]
    %td{class: type, data: {tile_id: tile.id}}
      %div.tile_thumbnail
        %a{href: edit_client_admin_tile_path(tile), class: 'tile_thumb_link'}
          %div.tile_thumb_holder
            %div.image= image_tag tile.thumbnail
            %div.tile_thumb_texts
              %div.headline= tile.headline
        = content_tag(:div, link_to('Archive',
                                     client_admin_tile_path(tile, update_status: Tile::ARCHIVE), method: :put),
                                     class: 'archive_tile_link') if type == :active
        = content_tag(:div, link_to('Activate',
                                     client_admin_tile_path(tile, update_status: Tile::ACTIVE), method: :put),
                                     class: 'archive_tile_link') if type == :archive
        = content_tag(:div, link_to('Preview',
                                     client_admin_tile_path(tile)),
                                     class: 'preview_tile_link')
        = content_tag(:div, link_to('Edit',
                                     edit_client_admin_tile_path(tile)),
                                     class: 'preview_tile_link')
