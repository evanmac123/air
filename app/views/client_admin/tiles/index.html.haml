.row
  .large-12.columns= render partial: 'tiles_tools_subnav'

%section.manage_tiles#archived_tiles
  .row
    .large-12.columns
      %h2 Inactive
      = link_to "Expand to show all", client_admin_inactive_tiles_path, :class => :all_inactive
      = link_to "Download CSV", client_admin_tiles_report_path(report: Tile::ARCHIVE, format: "csv")

      %div#archive= render partial: 'shared/tiles/archive'

  

%section.manage_tiles#active_tiles
  .row
    .large-12.columns
      %h2 Active
      = link_to "Download CSV", client_admin_tiles_report_path(report: Tile::ACTIVE, format: "csv")
      %div#active=  render partial: 'active'

- timeout_in_msecs = ThumbnailsController::THUMBNAIL_POLL_DELAY * 1000
- content_for :javascript do
  :javascript
    startTileThumbnailPollingFromQueue(#{timeout_in_msecs})
