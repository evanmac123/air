<div class="js-ca-tiles-index-module ca-tiles-index-module">
  <div class="tabs-component-full-width">
    <div class="row">
      <ul class="inline-list js-ca-tiles-index-module-tabs">
        <li class="js-ca-tiles-index-component-tab tab" data-tab-content="js-suggested-tiles-component"><a href="#">Suggested</a></li>
        <!-- <li class="js-ca-tiles-index-component-tab tab" data-tab-content="js-pinned-tiles-component"><a href="#">Planning</a></li> -->
        <li style="color: #8da0ab">|</li>
        <li class="js-ca-tiles-index-component-tab tab active" data-tab-content="js-draft-tiles-component"><a href="#">Draft</a></li>
        <li class="js-ca-tiles-index-component-tab tab" data-tab-content="js-active-tiles-component"><a href="#">Live</a></li>
        <li class="js-ca-tiles-index-component-tab tab" data-tab-content="js-archive-tiles-component"><a href="#">Archive</a></li>
      </ul>
      <%= link_to new_client_admin_tile_path, class: "new-tile-button js-new-tile-button float-right button icon" do %>
        <%= fa_icon "plus" %>
        <span>Add New Tile</span>
      <% end %>
    </div>
  </div>

  <%= render partial: 'client_admin/tiles/tiles_container', locals: {
    component_classes: "js-suggested-tiles-component hidden",
    id: "suggested",
    tiles: @tiles_facade.suggested_tiles
  } %>

  <%= render partial: 'client_admin/tiles/tiles_container', locals: {
    component_classes: "js-draft-tiles-component",
    id: "draft",
    tiles: @tiles_facade.draft_tiles
  } %>

  <%= render partial: 'client_admin/tiles/tiles_container', locals: {
    component_classes: "js-active-tiles-component hidden",
    id: "active",
    tiles: @tiles_facade.active_tiles
  } %>

  <%= render partial: 'client_admin/tiles/tiles_container', locals: {
    component_classes: "js-archive-tiles-component hidden",
    id: "archive",
    tiles: @tiles_facade.archive_tiles
  } %>
</div>
