<% show_client_admin_menu ||= false %>

<div class="large-9 large-centered columns tile_preview_container">
  <%= render partial: 'client_admin/tiles/tile_preview/menu', locals: {tile: @tile, show_client_admin_menu: show_client_admin_menu, menu_type: menu_type} %>
  <div class='viewer'>

    <% if show_client_admin_menu && @prev_tile && @next_tile %>
      <%= link_to "" , client_admin_tile_path(@prev_tile), :id => "prev_tile", class: "button_arrow prev_tile", data:{action: "show", tile_id: tile_id(@prev_tile) } %>

      <%= link_to "",  client_admin_tile_path(@next_tile) , :id => "next_tile", class: "button_arrow next_tile", data:{action: "show", tile_id: tile_id(@next_tile) } %>
    <% end %>
    <div id="slideshow">
      <%= render "tiles/full_size_tile", tile: @tile, is_preview: true, image_is_loading: true %>
    </div>

  </div>
</div>
