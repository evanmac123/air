<div class="button_wrap" id="publish">
  <%= form.submit submit_button_text %>
</div>

<%= image_tag "spinner.gif", id: "submit_spinner", style: "display: none" %>

<% content_for :javascript do %>
  <%= javascript_tag do %>
    var submitMessage = $('#submit_spinner');
    $('form#new_tile_builder_form').submit(function() {submitMessage.show()});
  <% end %>
<% end %>
