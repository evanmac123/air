<div class="demo_grid_section grid_section" data-update-link="<%= client_admin_board_stats_grids_path(@tst_board) %>" data-updates-checker-link="<%=  new_completions_count_client_admin_board_stats_grids_path(@tst_board) %>">
  <div class="grid_controls">
    <div class="large-9 columns">
      <div class="table_title">Activity</div>
      <div class="grid_types">
        <form class="custom">
          <%= select_tag "grid_type_select", options_for_select(GridQuery::TileActions::GRID_TYPES.invert, @current_grid) %>
        </form>
      </div>
    </div>
    <div class="large-3 columns">
      <%= link_to "Download CSV", client_admin_board_stats_grids_path(@tst_board, tile_stats_grid: {export: "csv"}, grid_type: @current_grid), class: "download_as_csv" %>
    </div>
  </div>
  <%= render(partial: 'client_admin/activity/activity_grid') %>
</div>
