
<div class="follow-up-email-form">
<h3 class="text-center">Edit Follow Up Details</h3>
  <%=form_for(@follow_up_email, url: client_admin_tiles_follow_up_email_path(@follow_up_email)) do |f| %>

    <ul>
      <li>
        <%= f.label :subject, "Subject" %>
        <%= f.text_field :subject, maxlength: 80 %>
        <script>
          addCharacterCounterFor('#follow_up_digest_email_subject');
        </script>
      </li>

      <% if @follow_up_email.alt_subject %>
        <li>
          <%= f.label :alt_subject, "Alternate Subject" %>
          <%= f.text_field :alt_subject, maxlength: 80 %>
          <script>
            addCharacterCounterFor('#follow_up_digest_email_alt_subject');
          </script>
        </li>
      <% end %>

      <li>
        <%= f.label :send_on, "Send On" %>
        <%= f.text_field :send_on, value: f.object.send_on.to_time.to_s(:tile_digest_email_sent_at), readonly: true %>
      </li>
    </ul>

    <div class="cmd-wrapper">
      <span class="commands">
        <%= link_to "Save", client_admin_tiles_follow_up_email_path(@follow_up_email),
          class: "save button small", data:{action:"save"} %>
      </span>
    <%end%>
    </div>
</div>
