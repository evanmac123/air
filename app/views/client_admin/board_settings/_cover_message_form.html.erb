<%= form_for board, url: cover_message_client_admin_board_settings_path, html: { id: "edit_board_cover_message"} do |form| %>
  <%= form.label :cover_message, "Cover Message" %>
  <i class="fa fa-question-circle has-tip" id="board_cover_message_tooltip" data-tooltip="true" title="Nice cover welcome explanation"></i>
  <%= form.text_area :cover_message, placeholder: "Cover me", rows: 5 %>
  <div class="error_message">
    Sorry, that message is invalid.
  </div>
  <%= form.submit "Update", disabled: true, class: "button outlined" %>
  <a class="clear_form">Clear</a>
<% end %>

<% js_at_end do %>
  $().ready(function(){
    addCharacterCounterFor( $("#demo_cover_message") );
    window.formWithClearableTextField("#demo_cover_message");
  })
<% end %>
