<div class="js-board-settings-module board-settings-module">
  <div class="tabs-component-full-width">
    <div class="row">
      <ul class="js-board-settings-module-tabs">
        <li class="js-board-settings-component-tab tab"
          data-status="board-settings"
          data-tab-content="js-board-settings-component">
          <a href="#">Board Settings</a>
        </li>
        <% if false # rollout campaign creation UI here %>
          <li class="js-campaigns-component-tab tab"
            data-status="campaign-settings"
            data-tab-content="js-campaigns-component">
            <a href="#">Campaign Settings</a>
          </li>
        <% end %>
        <% if current_user.is_site_admin %>
          <li class="js-population-segments-component-tab tab"
            data-status="population-segments"
            data-tab-content="js-user-population-segments-component">
            <a href="#">Population Segments</a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="js-board-settings-component board-settings-component js-board-settings-module-tab-content" >
    <div class="row">
      <%= render 'board_settings_component' %>
    </div>
  </div>

  <div class="js-campaigns-component campaigns-component js-board-settings-module-tab-content hidden" >
    <div class="row">
      <%= render 'campaign_settings_component' %>
    </div>
  </div>

  <div class="js-user-population-segments-component user-population-segments-component js-board-settings-module-tab-content hidden" >
    <div class="row">
      <%= render 'user_population_segments_settings_component' %>
    </div>
  </div>
</div>
