<%= form_for board, url: name_client_admin_board_settings_path, html: { id: "edit_board_name"} do |form| %>
  <%= form.label :name, "Board Name" %>
  <i class="fa fa-question-circle has-tip" id="board_name_tooltip" data-tooltip="true" title="Title of your board."></i>
  <%= form.text_field :name, maxlength: 50 %>
  <div class="clearfix"></div>
  <div class="error_message">
    Sorry, that board name is already taken.
  </div>
  <div class="empty_error_message">
    Sorry, you must enter a board name.
  </div>
  <%= form.submit "Update", disabled: true, class: "button outlined" %>
  <a class="clear_form">Clear</a>
<% end %>

