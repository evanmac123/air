<div class="tile_grid_section" data-update-link="<%= client_admin_tile_tile_stats_grids_path(@tile) %>" data-updates-checker-link="<%= new_completions_count_client_admin_tile_tile_stats_grids_path(@tile) %>">
  <div class="grid_controls">
    <div class="large-9 columns">
      <div class="grid_types">
        <% GridQuery::TileActions::GRID_TYPES.each do |type, name| %>
          <%= link_to name, client_admin_tile_tile_stats_grids_path(@tile, grid_type: type, answer_filter: ""), class: (type == @current_grid ? "current" : "")  %>
        <% end %>
      </div>
    </div>
    <div class="large-3 columns">
      <%= link_to "Download CSV", client_admin_tile_tile_stats_grids_path(@tile, tile_stats_grid: {export: "csv"}, grid_type: @current_grid), class: "download_as_csv" %>
    </div>
  </div>
  <%= render(partial: 'client_admin/tile_stats_grids/grid') %>
</div>
