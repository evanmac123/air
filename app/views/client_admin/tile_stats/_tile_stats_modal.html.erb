<div class="row title_block">
  <h1 class="tile-headline">
    <%= @tile.headline.truncate(60) if @tile %>
  </h1>
</div>
<div class="row stats_page">
  <div class="large-12 columns">
    <% if @chart_form %>
      <%= render partial: 'client_admin/tile_stats_charts/chart_section', locals: {chart_form: @chart_form, chart: nil} %>
      <%= render(partial: 'survey_chart') if @survey_chart %>
      <%= render(partial: 'client_admin/tile_stats_grids/grid_section') %>
    <% else %>
      <i class="chart-load-wheel fa fa-spinner fa-spin fa-3x fa-fw"></i>
    <% end %>
  </div>
</div>
