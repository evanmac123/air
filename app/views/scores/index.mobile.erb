<div data-role="header">
  <h1>Scoreboard</h1>
</div>

<div data-role="content">
  <ul data-role="listview">
    <% @users.each do |user| %>
      <li class="leader" value="<%= user.ranking %>">
        <div class="user">
          <%= link_to(user.name, user) %>
          <span class="score">
            <span class="score-value"><%= user.points %></span> points
          </span>
        </div>
        <% if user.won_at %>
          <span class="other-user-winning-time">won on <%= user.won_at.winning_time_format %></span>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
