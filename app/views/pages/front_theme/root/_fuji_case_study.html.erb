<div class="position-relative blue-teal-gradient case-study">
  <%= render partial: "pages/front_theme/svg/blue" %>
  <div class="u-bg-img-hero">
    <%= image_tag 'marketing_site/balloon_gray.svg', class: "right-balloon" %>
    <div class="row">
      <div class="col-md-4" data-aos="fade-down" data-aos-duration="1000" data-aos-easing="ease-in-out">
        <div class="attribute">
          <%= image_tag 'marketing_site/clients/carolyn.jpeg', class: "profile-pic" %>
          <p class="profile-title">Carolyn Gordon<br>
            <span class="small">Director of Benefits</span></p>
        </div>
      </div>
      <div class="col-md-8" data-aos="fade-up" data-aos-duration="1000" data-aos-easing="ease-in-out">
