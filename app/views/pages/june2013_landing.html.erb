<footer>
  <div class="row" id="sign_up">
    <div class="small-16 columns">
      <h1>Sign up to be a part of our pilot.</h1>
      <h2>Enter your email and we'll contact you within 24 hours with details.</h2>
      <form id="signup_form">
        <ul>
          <li id="email_field"><input type="text" id="contact_email" placeholder="Your email address" name="email" /></li>
          <li id="submit_field"><input type="submit" value="Sign up" /></li>
        </ul>
      </form>
      <div id="signup_responses">
        <div id="submitting_signup_form" class="signup_message" style="display: none">Please wait...</div>
        <div id="signup_error" class="signup_message" style="display: none">Please enter your email</div>
        <div id="signup_thanks" class="signup_message" style="display: none">Thanks! We'll be in touch when it's ready!</div>
      </div>
    </div>
  </div>
  <div class="row" id="footer_details">
    <div class="small-10 columns">
      <p class="copyright">Copyright &copy; 2013 H.Engage, Inc.</p>
    </div>
    <div class="small-6 columns">
      <a href="http://www.hengage.com" class="continue_to_home">Go to H.Engage</a>
    </div>
  </div>
</footer>

<script>
$("[placeholder]").placeholder();
window.HEngage = {
  scrollToElement: function(selector) {
    var topOffset = $(selector).offset().top;
    $('html, body').animate({scrollTop: topOffset}, 850);
  }
};

$('#free_trial_button').click(function(event){
  event.preventDefault();
  HEngage.scrollToElement('#signup_form');
  $('#signup_form input[type="text"]').focus();
  mpq.track("June 2013 signup clicked");
});

$('#signup_form').submit(function(e) {
  e.preventDefault();
  $('#signup_error, #signup_thanks').hide();

  var trimmedEmail = $.trim($('#contact_email').val());

  if(trimmedEmail == '') {
    $('#signup_error').slideDown();
  } else {
    $('#submitting_signup_form').show();
    $.post( 
      '<%= email_info_requests_path %>', 
      {contact_email: trimmedEmail, contact_comment: "From June 2013 landing page", silent: true}, 
      function() {
        $('#signup_thanks').slideDown();
        $('#submitting_signup_form').hide();
      }
    )
  }
});
</script>

