<%= render layout: "pages/landing/hero", locals: {no_shadow: true} do %>
  <h1>Engaging employee communications that get HR priorities done.</h1>
  <p>Join to explore best practices and content you can use today, it's free forever.</p>
  <div class="align_center"><%= link_to "Join", "#sign_up_block", class: "large button green" %></div>
<% end %>
<main>
  <section class="clients">
    <div class="clients_section row">
      <h3 class="align_center">Used by organizations with 20 to 75,000 employees.</h3>
      <%= render partial: "pages/landing/logos" %>
    </div>
  </section>

  <section class="topics">
    <div class="topics_section row">
      <h3 class="medium align_center">What's your most important priority today?</h3>
      
      <div class="topics_container">
        <%= render partial: "pages/landing/topic", locals: {title: "Wellness", link: "", img: "wellness",  comming_soon: false} %>
        <%= render partial: "pages/landing/topic", locals: {title: "Compliance", link: "", img: "compliance",  comming_soon: false} %>
        <%= render partial: "pages/landing/topic", locals: {title: "Onboarding", link: "", img: "recruitment",  comming_soon: true} %>
        <%= render partial: "pages/landing/topic", locals: {title: "Benefits", link: "", img: "wellness",  comming_soon: true} %>
        <%= render partial: "pages/landing/topic", locals: {title: "Management", link: "", img: "wellness",  comming_soon: true} %>
        <%= render partial: "pages/landing/topic", locals: {title: "Events", link: "", img: "wellness",  comming_soon: true} %>
      </div>
    </div>
  </section>

  <section id="sign_up_block" class="join">
    <div class="join_block center">
      <h2 class="align_center">Join Airbo Explore to discover engaging content.</h2>
      <p class="align_center">Get started exploring today, it's free forever.</p>
      <%= render partial: "pages/landing/form" %>
      <%= render partial: "pages/landing/logos" %>
    </div>
  </section>
</main>
<%= render partial: "pages/landing/footer" %>