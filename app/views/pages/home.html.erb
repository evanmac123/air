<div class="hero">
  <%= render partial: "pages/landing/header" %>
  <section class="hero_section">
    <div class="hero_content">
      <h1>Engaging employee communications that get HR priorities done.</h1>
      <h3>Join to explore best practices and content you can use today, it's free forever.</h3>
      <%= form_tag demo_requests_url, class: "inline align_center" do %>
        <%= text_field_tag "user[name]", "", placeholder: "First and Last Name" %>
        <%= text_field_tag "user[email]", "", placeholder: "Work Email" %>
        <%= submit_tag "Join", class: "button green" %>
      <% end %>
    </div>
  </section>
</div>
<main>
  <section class="clients">
    <div class="clients_section row">
      <h5 class="align_center">Used by organizations with 20 to 75,000 employees.</h5>
      <div class="client_logos">
        <div class="small-4 columns">
          <%= image_tag "landing/Fujifilm-logo.png" %>
        </div>
        <div class="small-4 columns">
          <%= image_tag "landing/asha-logo.png" %>
        </div>
        <div class="small-4 columns">
          <%= image_tag "landing/milton-cat-logo.png" %>
        </div>
      </div>
    </div>
  </section>

  <section class="money">
    <div class="money_section row">
      <h2 class="align_center">
        The bulletin board reinvented.
      </h2>

      <div class="animation_block desktop_only">
        <%= image_tag "landing/product-intro.png", class: "mac_book" %>
        <div class="animation">
          <img src="/images/engage_new_2.gif" >
        </div>
      </div>

      <div class="benefits_group">
        <div class="large-4 columns">
          <div class="benefit_block">
            <div class="title">Earn More Appreciation</div>
            <div class="desc">
              Share interactive content your employees will read, understand and even enjoy.
            </div>
          </div>
        </div>
        <div class="large-4 columns">
          <div class="benefit_block">
            <div class="title">Get More Participation</div>
            <div class="desc">
              Higher engagement improves ROI from the programs you invest in.
            </div>
          </div>
        </div>
        <div class="large-4 columns">
          <div class="benefit_block">
            <div class="title">Spend Less Time</div>
            <div class="desc">
              Use stock content, track engagement and automate follow-ups.
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="explore bg-blue">
    <div class="explore_block">
      <div class="large-2 columns">
        <%= image_tag "landing/icon-rocket-big.png", class: "explore_img" %>
      </div>
      <div class="large-10 columns">
        <h2 class="title white">Introducing Airbo Explore</h2>
        <p class="desc white">
          Join an HR community of over 700 companies. Discover best practice content your employees will love. Sign up below.
        </p>
      </div>
    </div>
  </section>
</main>
<%= render partial: "pages/landing/footer" %>