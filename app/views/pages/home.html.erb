
<%= render layout: "pages/landing/hero", locals: {no_shadow: true, no_header:false,  hero_class: ""} do %>
  <h1 class="text-center">Modern Employee Communications for HR</h1>
  <h3 class="text-center">Airbo is a simple and engaging Employee Communication Platform.</h3>
<% end %>

<section class="clients">
  <div class="clients_section row">
    <h3 class="align_center">Organizations from 20 to 75,000 employees use Airbo to make employee communications more effective.</h3>
    <%= render partial: "pages/landing/logos" %>
  </div>
</section>
<a id="tour"></a>
<div class="row" style="padding-top:70px" >
  <div class="small-8 columns small-centered center-panel" >
    <div class="row" >
      <div class="small-4 columns center-panel">
        <%=image_tag "landing/sb-wellness-icon01.png"%>
      </div>

      <div class="small-4 columns center-panel">
        <%=image_tag "landing/sb-wellness-icon02.png"%>
      </div>

      <div class="small-4 columns center-panel" >
        <%=image_tag "landing/sb-wellness-icon03.png"%>
      </div>
    </div>
  </div>
</div>
<div class="row full-band">
  <div class="small-8 columns small-centered center-panel">
    <div class="row">
      <div class="small-4 columns center-panel">
        <h3>Tile</h3>
        <p>Bite-sized, interactive content that's fast to create.</p>
      </div>

      <div class="small-4 columns center-panel">
        <h3>Board</h3>
        <p>Simple place to post Tiles for employees to read.</p>
      </div>

      <div class="small-4 columns center-panel" >
        <h3>Metrics</h3>
        <p>Send Tiles and see who read and took action.</p>
      </div>
    </div>
  </div>
</div>

 <section class="topics">
<h2 class="text-center padded-v-20">Explore Boards</h2>
<div class="row padded-v-20">
  <div class="columns small-12 small-centered">
    <div class="row ">
      <%@sorted_demos.each do |board|%>
        <div class="columns small-3">
        <%= render partial: "pages/landing/topic", locals: {board:board}%> 
      </div>
    <%end%>
    </div>
  </div>
</div>
 </section>
<%# render partial: "pages/landing/request_form" %>
<a id="sign_up_form">
<section id="sign_up_block" class="join">
  <div class="join_block center">
    <h2 class="align_center">Join to Discover</h2>
    <p class="align_center">Create a free account to see how companies use Airbo.</p>
    <%= render partial: "pages/landing/form" %>
    <%= render partial: "pages/landing/logos" %>
  </div>
</section>
</a>
<%= render partial: "pages/landing/footer" %>
