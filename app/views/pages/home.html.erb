<div class="hero">
  <%= render partial: "pages/landing/header" %>
  <div class="hero_section">
    <div class="hero_content">
      <h1>Engaging employee communications that get HR priorities done.</h1>
      <h3>Join to explore best practices and content you can use today, it's free forever.</h3>
      <%= form_tag demo_requests_url, class: "inline align_center" do %>
        <%= text_field_tag "user[name]", "", placeholder: "First and Last Name" %>
        <%= text_field_tag "user[email]", "", placeholder: "Work Email" %>
        <%= submit_tag "Join", class: "button green" %>
      <% end %>
    </div>
  </div>
</div>
<main>
  <div class="clients">
    <div class="clients_section row">
      <h5 class="align_center">Used by organizations with 20 to 75,000 employees.</h5>
      <div class="client_logos">
        <div class="small-4 columns">
          <%= image_tag "landing/Fujifilm-logo.png" %>
        </div>
        <div class="small-4 columns">
          <%= image_tag "landing/asha-logo.png" %>
        </div>
        <div class="small-4 columns">
          <%= image_tag "landing/milton-cat-logo.png" %>
        </div>
      </div>
    </div>
  </div>
</main>
<%= render partial: "pages/landing/footer" %>