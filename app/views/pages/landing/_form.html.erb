<% btn_clr ||= "" %>

<%= form_tag set_new_board_url, class: "sign_up" do %>

  <%= label_tag "user[name]", "First and Last Name" %>
  <%= text_field_tag "user[name]", "", placeholder: "" %>

  <%= label_tag "user[email]", "Email" %>
  <%= text_field_tag "user[email]", "", placeholder: "Work Email" %>

  <%= hidden_field_tag "page_name", sign_up_form_page_name(params) %>
  <%= hidden_field_tag "creation_source_board", creation_source(params) %>
  <%= hidden_field_tag "creation_source_creator", creation_source(params) %>

  <%= submit_tag "Sign Up", class: "button #{btn_clr} full_width" %>
<% end %>
