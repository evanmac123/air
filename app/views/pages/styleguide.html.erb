  <section class="modals">
    <h5>Modals</h5>
    <div class="large-12 columns large-centered">
      <div class="example row">
        <section>
          <h5>Simple modal</h5>

          <a href="#" data-reveal-id="example_modal">Click for a modal</a>
          <div id="example_modal" class="reveal-modal" data-reveal>
            <h2>Congratulations!</h2>
            <p>Your've succesfully opened our reveal modal from Foundation framework.</p>
            <a class="close-reveal-modal">&#215;</a>
          </div>
        </section>
        <section>
          <h5>Confirmation Modal</h5>
          <%= link_to 'Delete', '', method: :delete, data: { confirm: destroy_tile_message_params } %>
        </section>
      </div>
    </div>
  </section>

  <section class="intro-js">
    <h5>Intro JS</h5>
    <div class="large-12 columns large-centered">
      <div class="example row">
        <%= content_tag :section, data: {intro: "This turns on intro js", "step-name" => "button", step: 1} do %>
          <%=  link_to "Turn on Intro JS", '#', id: "turn-on-intro-js", class: "big_button"%>
        <% end %>
        <section>
          <%= text_field_tag :url, "http://usablica.github.io/intro.js/", data: {intro: "This is link to library and demos. We are using gem 'introjs-rails' for it.", "step-name" => "link", step: 2} %>
