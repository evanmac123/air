<div class="feature-group ft-metrics" id="ipnav-metrics">
  <div class="feature-head">
    <h2><%= t('.section_header') %></h2>
    <h5><%= t('.section_subheader')%></h5>
  </div>
  <div class="ribbon-analytics">
    <%= image_tag("marketing_site/metrics.png", alt: "Airbo Metrics") %>
  </div>
  <div class="wrap">
    <div class="left">
      <ul class="ft-lists ft-type-board">
        <% [*1..6].each do |num| %>
          <li>
            <div>
              <h4><%= t(".metrics_value_header#{num}") %></h4>
              <p><%= t(".metrics_value_subheader#{num}") %></p>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="right">
      <blockquote class="promo-quote">
        <p><%= t('.promo_quote') %></p>
        <cite>
          <%= image_tag("marketing_site/logo_thumbnails/envisionit.jpg", alt: "Envisionit") %>
          <%= t('.promo_quote_cite_html') %>
        </cite>
      </blockquote>
    </div>
  </div>
</div>
