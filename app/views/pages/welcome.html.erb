<div class="landing_lightbox">
  <div class="row">
    <div class="landing_welcome_box large-9 large-centered columns">

      <div class="get_your_board large-12">
        <h1>Communicate so people read, remember, and take action</h1>
        <h4>Your Board is a space to create communications and share them with your audience.</h4>

        <form>
          <input type="text" placeholder="Name your board" />
          <input type="submit" value="Create your free board" />
        </form>

        <a href="#!" class="browse_a_board">Browse a board</a>
      </div>

      <div class="product_features large-12">
        <div class="video_container">
          <div style="height:170px; width:100%; background:#dfdfdf"></div>
        </div>
        <div class="consumer_tools">
          <h3>Use consumer tools people love and pay attention to.</h3>
          <ul>
            <li class="soc_media">Social media</li>
            <li class="gaming">Gamification</li>
            <li class="mobile">Mobile</li>
            <li class="analytics">Analytics</li>
            <li class="design">Good design</li>
          </ul>
        </div>
      </div>

      <div class="clients large-12">
        <%= render "pages/our_clients" %>
      </div>

    </div>
  </div>
</div>

<script>


$('#signup_form').submit(function(e) {
  e.preventDefault();
  $('#signup_error, #signup_thanks').hide();

  var trimmedEmail = $.trim($('#contact_email').val());

  if(trimmedEmail == '') {
    $('#signup_error').slideDown();
  } else {
    $('#submitting_signup_form').show();
    $.post( 
      '<%= email_info_requests_path %>', 
      {contact_email: trimmedEmail, contact_comment: "From Public board landing", silent: true}, 
      function() {
        $("#signup_form").hide();
        $('#submitting_signup_form').hide();
        $('#signup_thanks').fadeIn();
        mpq.track("Public board landing, Sign Up form submitted", {});
      }
    )
  }
});

$("[placeholder]").placeholder();
</script>

<%= mp_track_page 'Public board landing' %>
