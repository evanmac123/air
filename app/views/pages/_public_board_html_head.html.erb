<%content_for :head do%>
  <script>
$(function(){


  function initTab2(){
    if(window.location.hash=="#best-practices"){
      switchTabs($("#tab-link-2"));
      postClick($("#tab-link-2"))
    }
  }

  function postClick(obj){

    if(obj.attr("href")=="#best-practices-tab"){
      $("#quote").hide();
      window.location.hash = '#best-practices';
      shrinkTabSpacing();
    }else{
      $("#quote").show();
      window.location.hash = '';
      expandTabSpacing();
    }

  }

  function switchTabs(currLink){

      $('#tabs ul li a').removeClass('selected');
      currLink.addClass('selected');
      var currentTab = currLink.attr('href');
      $('#tabs .tab').hide();
      $(currentTab).show();
  }

  function initToggleTabs(){
    $('#tabs .tab').hide();
    $('#tabs div.tab:first').show();
    $('#tabs ul li:first a').addClass('selected');

    $('#tabs ul li a').click(function(){
      switchTabs($(this));
      postClick($(this));
      window.scrollTo(0,0)
      return false;
    }); 
  }

  function hideQuote(){
    $("#quote").hide();
  }

  function shrinkTabSpacing(){
    $("ul.tabs").css({"margin-top": "-35px", "margin-bottom": "46px"});
  }

  function expandTabSpacing(){
    $("ul.tabs").css({"margin-top": "-235px", "margin-bottom": "246px"});
  }

  function init(){
    initToggleTabs();
    initTab2();
  }

  init();
  
});
  </script>
