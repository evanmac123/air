  <script>
$(function(){

  var tabLinkSelector = 'ul.tab-switch li a'
    , tabPanels ='#tab-panel .tab'
    , firstTabLink = 'ul.tab-switch li:first a' 
    , firstTabPanel = '#tab-panel .tab:first' 

  function initTab2(){
    if(window.location.hash=="#best-practices"){
      Airbo.StarterKitActivationIntro.exit();
      switchTabs($("#tab-link-2"));
      postClick($("#tab-link-2"));
      Airbo.StarterKitActivationIntro.run()
    }
  }

  function postClick(obj){

    if(obj.attr("href")=="#best-practices-tab"){
      $("#quote").hide();
      window.location.hash = '#best-practices';
    }else{
      $("#quote").show();
      window.location.hash = '';
    }

  }

  function switchTabs(currLink){

      $(tabLinkSelector).removeClass('selected');
      currLink.addClass('selected');
      var currentTab = currLink.attr('href');
      $(tabPanels).hide();
      $(currentTab).show();
  }

  function initToggleTabs(){
    $(tabPanels).hide();
    $(firstTabPanel).show();
    $(firstTabLink).addClass('selected');

    $(tabLinkSelector).click(function(){
      switchTabs($(this));
      postClick($(this));
      window.scrollTo(0,0)
      return false;
    }); 
  }

  function hideQuote(){
    $("#quote").hide();
  }

  function init(){
    initToggleTabs();
    initTab2();
  }

  init();
  
});
  </script>
