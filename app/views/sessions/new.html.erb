<%= render :partial => 'shared/flashes' -%>

<div id="session-wrapper">
  <h2>Sign In</h2>
  <%= form_tag session_path do  %>
    <%= text_field_tag "session[email]", 'email', :class => 'with-hint-text' %>
    <%= password_field_tag "session[password]", 'password', :class => 'with-hint-text' %>
    <%= submit_tag "Sign in" %>
  <% end %>

  <%= link_to "Forgot password?", new_password_path %>
</div>
