.follow_buttons
  - if current_user == user
    .pending_notice This is you!
  -else
    - unless current_user.following_or_follow_pending? user  
      .follow-btn
        Add to Friends
        = form_tag user_friendship_path(user) do
          = submit_tag "Follow", :class => :hidden
    - else
      - if current_user.follow_pending? user
        .pending_notice (friendship requested)
        - follow_text = "Cancel request"
      - else
        .pending_notice (already friends)
        - follow_text = "End friendship"
      .stop-following-btn
        = follow_text
        = form_tag user_friendship_path(user), :method => :delete do
          = submit_tag follow_text, :class => :hidden
