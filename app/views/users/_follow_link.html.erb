<% if @user.privacy_level == "nobody" %>
  <p>
    <%= @reason_for_privacy %>
  </p>
<% else %>
  <%= form_tag user_friendship_path(@user), :class => "follow_to_see" do %>
    <%= hidden_field_tag :friend_link, :follow_to_see_activity %>
    <p class="indent_same_as_table">
      <%= "To see #{@user.name.split.first}'s information," %>
      <%= (link_to ("connect with " + @user.her_him), '#', :onclick => "$('form.follow_to_see').submit()") + "." %>
    </p>
  <% end %>
<% end %>
