.row 
  .large-4.columns
    #about-player.module
      .player-avatar
        = avatar_96(@user)
        
      %ul.player-info
        %li
          %h2= @user.name
        %li 
          = render 'follow_buttons', :user => @user

    = render 'accepted_friends'
    - if @display_pending_friendships  
      #followed-by.module
        %h3 Connection Requests
        %ul#friend_requests
          - @pending_friends.each do |friend|
            %li.user
              %p.user-name= link_to friend.name, user_path(friend)

  .large-7.columns
    #recent-activity.module
      %h3 Recent Activity
      - unless @display_user_stats
        = render 'follow_link'
      - else
        %ul#user-acts
          %li.act-shim
          = render :partial => 'shared/act', :collection => @acts, :as => :act
      = render 'shared/see_more'

  = js_at_end do
    bindSeeMoreActs('#{user_acts_path(user_id: @user.id, format: :js)}', #{@acts.length});
