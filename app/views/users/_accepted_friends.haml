%h2.title Connections
#following_wrapper
  #following.module
    - if @current_user == @user 
      %h1.headline Your Friends
    - else
      %h1.headline= "#{@user.first_name}'s Friends"
    - unless @display_user_stats
      = render 'follow_link'
    - else
      %ul#accepted_friendships
        - unless @has_friends
          %p No friends yet
        - else
          %p <span class='bold' id='sort_by_first_name'>Name</span> <span id='sort_by_points'>Level</span>
          #friends_list
            = render :partial => 'single_friend', :collection => @user.profile_page_friends_list
          #scoreboard_list
            = render :partial => 'single_friend', :collection => @user.scoreboard_friends_list_by_points


    .cf
= javascript_include_tag 'scoreboard'
