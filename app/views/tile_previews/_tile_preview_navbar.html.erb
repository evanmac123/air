<div class='large-7 columns large-centered tile_preview_navbar'>
    <div class='tile-head tile_holder'>
      <% if @tag.present? %>
        <%= link_to '<i class="fa fa-arrow-left"></i> Explore: '.html_safe + @tag.title, tile_tag_show_explore_path(tile_tag: @tag.id)  %>
      <% else %>
          <%= link_to explore_path do %>
              <i class="fa fa-arrow-left"></i> <%='Explore'%>
          <% end %>
       <% end %>
    </div>

    <div class='basic-info tile_holder justify'>
        <div class='creator'>
          <%=fa_icon :user if tile.creator && !tile.creator.name.blank?%>
          <%=(tile.creator && tile.creator.name) || ''%>
        </div>
        <div id="company-name-header">
          <% if tile.demo.client_name.present? %>
            <div id="company-icon"><i class="fa fa-building-o"></i></div>
            <div id="company-name"><%= truncate(tile.demo.client_name, length:20) %></div>
          <% end %>
        </div>
        <div id="board-name-header">
          <div id="board-icon"><i class="fa fa-th-large"></i></div>
          <div id="board-name"><%= truncate(tile.demo.name, length:20) %></div>
        </div>
    </div>
</div>

