<%content_for :head do%>
  <%= render partial: 'meta_tags', locals: { tile: @tile } %>
  <%= stylesheet_link_tag "app-internal" %>
  <%= javascript_include_tag "internal/countUp.min" %>
  <%= javascript_include_tag "internal/point_and_ticket_animation" %>
<%end%>
<%= render partial: 'tile_preview', locals: { tile: @tile, tag: @tag, next_tile: @next_tile, prev_tile: @prev_tile } %>

<% if guest_for_tile_preview? || user_is_guest_for_tile_preview? %>
  <%= javascript_tag do %>
    window.guestForTilePreview = true;
  <% end %>
  <%= render partial: 'sign_up_form' %>
<% end %>

<% js_at_end do %>
  bindTileCarouselNavigationButtons();
<% end %>

<%= render partial: 'explores/explore_intro' if @show_explore_intro %>
