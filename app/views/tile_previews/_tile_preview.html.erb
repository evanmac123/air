<% intros = @intros || TilePreview::NullIntrosPresenter.new %>
<% if intros.any_active? %>
  <%= content_for :javascript do %>
    <%= javascript_tag do %>
      bindTilePreviewIntros();
    <% end %>
  <% end %>
<% end %>

<%render partial: 'like_copy_tag_bar', locals: {tile: tile, intros: intros} %>
<%render partial: 'tile_preview_navbar', locals: {tile: tile, tag: tag} %>
<%=render partial: 'copy_btn', locals: {tile: tile} %>
<div class="large-centered columns">
  <%= render "tiles/full_size_tile", tile: tile, is_preview: true %>
</div>
<%=render partial: 'share_bar', locals: {tile: tile, intros: intros} %>
<div class="bg-white center bar_for_preview align_left offset_top">
  <%=render partial: 'creator', locals: { tile: tile } %>
  <%=render partial: 'categories', locals: { tile: tile } %>
</div>