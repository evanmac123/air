<table width="480" align="center" cellpadding="0" cellspacing="0" border="0" class="columns">
  <tr>
    <td width="100" align="center" style="padding:20px;border-left:1px solid #dfdfdf;border-top:1px solid #dfdfdf;border-bottom:1px solid #dfdfdf;border-top-left-radius:4px;">
      <%= email_logo %>
    </td>
    <td width="376" style="font-family:Helvetica,Arial,sans-serif;font-size:25px;color:#48BFFF;padding-top:20px;border-right:1px solid #dfdfdf;border-top:1px solid #dfdfdf;border-bottom:1px solid #dfdfdf;border-top-right-radius:4px;">
      New Account Creation Request
    </td>
  </tr>
</table>
<table width="480" align="center" cellpadding="0" cellspacing="0" border="0" class="columns">
  <tr>
    <td style="font-family:Helvetica,Arial,sans-serif;color:#2e2e2c;mso-line-height-rule:exactly;line-height:12px;padding-top:14px;padding-left:10px;padding-right:10px;padding-bottom:20px;border-left:1px solid #dfdfdf;border-right:1px solid #dfdfdf;">
      Request Created At: <%= @account_request['created_at']  %>
    </td>
  </tr>
  <tr>
    <td style="font-family:Helvetica,Arial,sans-serif;color:#2e2e2c;mso-line-height-rule:exactly;line-height:12px;padding-top:14px;padding-left:10px;padding-right:10px;padding-bottom:20px;border-left:1px solid #dfdfdf;border-right:1px solid #dfdfdf;">
      <p>Name: <%= @account_request['name'] %></p>
    </td>
  </tr>
  <tr>
    <td style="font-family:Helvetica,Arial,sans-serif;color:#2e2e2c;mso-line-height-rule:exactly;line-height:12px;padding-top:14px;padding-left:10px;padding-right:10px;padding-bottom:20px;border-left:1px solid #dfdfdf;border-right:1px solid #dfdfdf;">
      <p>Email: <%= @account_request['email']  %></p>
    </td>
  </tr>
  <tr>
  <tr>
    <td style="font-family:Helvetica,Arial,sans-serif;color:#2e2e2c;mso-line-height-rule:exactly;line-height:12px;padding-top:14px;padding-left:10px;padding-right:10px;padding-bottom:20px;border-left:1px solid #dfdfdf;border-right:1px solid #dfdfdf;">
      <p>Phone: <%= link_to @account_request['phone_number'], "tel:#{@account_request['phone_number']}"  %></p>
    </td>
  </tr>
  <tr>
    <td style="font-family:Helvetica,Arial,sans-serif;color:#2e2e2c;mso-line-height-rule:exactly;line-height:12px;padding-top:14px;padding-left:10px;padding-right:10px;padding-bottom:20px;border-left:1px solid #dfdfdf;border-right:1px solid #dfdfdf;">
      <p>Organization: <%= @account_request['company_name'] %></p>
    </td>
  </tr>
</table>
