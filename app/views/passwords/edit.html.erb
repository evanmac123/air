<%= render :partial => 'shared/flashes' -%>

<div id="password-wrapper">
  <h2>Choose a Password</h2>
  <ul class='form-section'><li class='form-label'>Your email: <%= @user.email %></li></ul>

  <%= form_for(
        @user,
        :url     => user_password_path(@user, :token => @user.confirmation_token),
        :html    => { :method => :put },
        :builder => FancyFormBuilder
      ) do |form| %>
          <%= form.fancy_password_field :password, :label_text => "Password", :value => '' %>
          <%= form.fancy_password_field :password_confirmation, :label_text => "Confirm password", :value => '' %>
          <div class="submit_field">
            <%= form.submit "Save this password" %>
          </div>
  <% end %>
</div>

<%= mp_track_page 'password reset' %>
