              <%= link_to "Accept", accept_friendship_url(@user_id, @friendship_id), {style:'color:#ffffff;text-decoration:none;display:block;border-left:10px solid #4face0;border-right:10px solid #4face0;border-top:15px solid #4face0;border-bottom:15px solid #4face0;'} %>
            </td>
          </tr>
        </table>
      </center></td>
    </tr>
  </table>
