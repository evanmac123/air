<!-- 2-col image/text -->
<table width="436" align="center" cellpadding="0" cellspacing="0" border="0" class="columnsNoPadding">
  <% if @tiles.present? %>
    <% @tiles.each_slice(2) do |tiles| %>
      <tr>
        <td width="208" valign="top" class="column">
          <% if tiles[0].present? %>
            <%= render partial: "tiles_digest_mailer/v1/tile", locals: { tile: tiles[0], site_link: @presenter.general_site_url(tile_id: tiles[0].id) } %>
          <% end %>
        </td>
        <td width="20" class="verticalGap">
          &nbsp;
        </td>
        <td width="208" valign="top" class="column">
          <% if tiles[1].present? %>
            <%= render partial: "tiles_digest_mailer/v1/tile", locals: {tile: tiles[1], site_link: @presenter.general_site_url(tile_id: tiles[1].id) } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td width="208" valign="top" class="column">
        <%= render partial: "tiles_digest_mailer/v1/tile_placeholder" %>
      </td>
      <td width="20" class="verticalGap">
        &nbsp;
      </td>
      <td width="208" valign="top" class="column">
        <%= render partial: "tiles_digest_mailer/v1/tile_placeholder" %>
      </td>
    </tr>
  <% end %>
</table>
