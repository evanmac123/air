<!-- 2-col image/text -->
<% tile_link_args = [tile.email_site_link, tile.email_link_options.merge(style: "text-decoration:none;display:block;color:#2e2e2c;word-break:break-word;", target: "_blank", class: "tile_link")] %>
<%= link_to *tile_link_args do %>
<table align="center" cellpadding="0" cellspacing="0" border="0" style="border:1px solid #dfdfdf;" class="columnsNoPadding">
<tr>
  <td width="207" class="column" style="display: inline-block;">
    <table cellpadding="0" cellspacing="0" border="0" class="columnsNoPadding">
    <tr>
      <td class="column">
        <%= link_to *tile_link_args do %>
          <%= image_tag(tile.email_img_url, alt: tile.headline, width: '208px', height: "170px", border: "0px", style: 'display:block; border-style:none;', class: "imageScale") %>
        <% end %>
      </td>
    </tr>
    </table>
  </td>
  <td width="220" class="column" style="display: inline-block;">
    <table align="center" cellpadding="0" cellspacing="0" border="0" class="columnsNoPadding">
    <tr>
      <td style="" class="column">
        <table cellpadding="0" cellspacing="0" border="0" class="columns">
        <tr>
          <td style="font-family:Helvetica,Arial,sans-serif;font-size:16px;color:#4c4c4c;mso-line-height-rule:exactly;line-height:25px;padding-top:10px;padding-bottom:10px;padding-left:20px;padding-right:20px;" class="columnNormal">
            <span class="appleLinks2">
              <%= link_to *tile_link_args do %>
                <%= tile.headline %>
              <% end %>
            </span>
          </td>
        </tr>
        </table>
      </td>
    </tr>
    </table>
  </td>
</tr>
</table>
<% end %>
<table cellpadding="0" cellspacing="0" border="0" class="columnsNoPadding">
<tr>
  <td style="font-family:Helvetica,Arial,sans-serif;font-size:15px;color:#6d6d6d;mso-line-height-rule:exactly;line-height:20px;padding-top:10px;word-break:break-word;" class="column">
    <%= unescape_html tile.supporting_content %>
  </td>
</tr>
</table>
<% if tile.link_address.present? %>
  <table cellpadding="0" cellspacing="0" border="0" class="columnsNoPadding">
  <tr>
    <td style="font-family:Helvetica,Arial,sans-serif;font-size:15px;color:#6d6d6d;mso-line-height-rule:exactly;line-height:24px;padding-top:10px;word-break:break-word;" class="column">
      Visit <%= link_to truncate(tile.link_address, length: 30), tile.link_address, target: '_blank' %>
    </td>
  </tr>
  </table>
<% end %>
<table width="436" align="center" cellpadding="0" cellspacing="0" border="0" class="columnsNoPadding">
<tr>
  <td colspan="3" height="10" style="font-size:1px;line-height:1px;">
    &nbsp;
  </td>
</tr>
<tr>
  <td width="25" style="font-family:Helvetica,Arial,sans-serif;font-size:14px;color:#48BFFF;mso-line-height-rule:exactly;line-height:22px;padding-top:5px;padding-bottom:5px;padding-left:5px;padding-right:5px;border:1px solid #48BFFF;">
    +<%= tile.points %>
  </td>
  <td width="411" style="font-family:Helvetica,Arial,sans-serif;font-size:14px;color:#4c4c4c;mso-line-height-rule:exactly;line-height:22px;padding-top:5px;padding-bottom:5px;padding-left:5px;padding-right:5px;border:1px solid #dfdfdf;border-left:0;word-break:break-word;">
    <%= tile.question.truncate(52) %>
  </td>
</tr>
<tr>
  <td colspan="3" height="30" style="font-size:1px;line-height:1px;">
    &nbsp;
  </td>
</tr>
</table>
