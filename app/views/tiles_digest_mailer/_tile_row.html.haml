%tr
  - tiles.each do |tile|
    - tile_url = tile.thumbnail(:email_digest).url  # Paperclip returns the full url in staging and production modes
    - tile_url = tile_url.prepend('http://localhost:3000') if (Rails.env.development? or Rails.env.test?)

    %td.tile_thumbnail{:style => "vertical-align:top; line-height:20px; padding-bottom:1em;"}
      %center
        %table{:cellpadding => "0", :cellspacing => "0", :width => "238", :style => "font-size:1.125em; color:gray; text-align:center; table-layout:fixed;"}
          %tr
            %td{:style => "background:#292929; white-space:nowrap; vertical-align:middle;", :width => "238"}
              %div{:style => "overflow:hidden; width:238px; height:10em;"}= link_to(image_tag(tile_url, alt: tile.headline, width: '238px', style: 'display:block; border-style:none;'), site_link)
          %tr
            %td{:style => "font-family: helvetica, arial, sans-serif; background:#292929; color:#fff; text-align:left; padding:10px; word-wrap:break-word;", :height => "80", :width => "238"}
              = tile.headline
