%tr
  - tiles.each do |tile|
    - tile_url = tile.thumbnail.url  # Paperclip returns the full url in staging and production modes
    - tile_url = tile_url.prepend('http://localhost:3000') if (Rails.env.development? or Rails.env.test?)

    %td.tile_thumbnail{:style => "vertical-align:top; line-height:20px;"}
      %div.thumbnail_holder{:style => "margin:0 auto; width:190px; font-size:1.125em; color:gray; text-align:center; "}
        %div.image{:style => "background:#292929; height:8em; position:relative; overflow:hidden; vertical-align:middle;"}= link_to(image_tag(tile_url, alt: tile.headline, width: '190px', style: 'display:block;'), site_link)
        %div.headline{:style => "background:#292929; color:#fff; text-align:left; height:70px; padding:.75em .5em;"}= tile.headline
