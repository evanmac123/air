<!-- 2-col image/text -->
<table width="436" align="center" cellpadding="0" cellspacing="0" border="0" class="columnsNoPadding">
<% @tiles.each_slice(2) do |tiles| %>
  <tr>
    <td width="208" valign="top" style="padding-bottom:60px;padding-right:10px;" class="column">
      <%= render partial: "tiles_digest_mailer/notify_one_tile", locals: {tile: tiles[0], site_link: site_link, link_options: link_options} %>
    </td>
    <td width="208" valign="top" style="padding-bottom:60px;padding-left:10px;" class="column">
      <% if tiles[1] %>
        <%= render partial: "tiles_digest_mailer/notify_one_tile", locals: {tile: tiles[1], site_link: site_link, link_options: link_options} %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>