<!-- 2-col image/text -->
<table width="436" align="center" cellpadding="0" cellspacing="0" border="0" class="columnsNoPadding">
<% @tiles.each_slice(2) do |tiles| %>
  <tr>
    <td width="208" valign="top" class="column">
      <%= render partial: "tiles_digest_mailer/notify_one_tile", locals: {tile: tiles[0], link_options: link_options} %>
    </td>
    <td width="20" class="verticalGap">
      &nbsp;
    </td>
    <td width="208" valign="top" class="column">
      <% if tiles[1] %>
        <%= render partial: "tiles_digest_mailer/notify_one_tile", locals: {tile: tiles[1], link_options: link_options} %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>
