<!-- 2-col image/text -->
<table width="436" align="center" cellpadding="0" cellspacing="0" border="0" class="columnsNoPadding">
<% @tiles.each_slice(2) do |tiles| %>
  <tr>
    <td width="208" valign="top" class="column">
      <% if @presenter.is_empty_preview? %>
        <%= render partial: "tiles_digest_mailer/tile_placeholder" %>
      <% else %>
        <%= render partial: "tiles_digest_mailer/tile", locals: { tile: tiles[0], site_link: @presenter.site_link(tile_id: tiles[0].id) } %>
      <% end %>
    </td>
    <td width="20" class="verticalGap">
      &nbsp;
    </td>
    <td width="208" valign="top" class="column">
      <% if @presenter.is_empty_preview? %>
        <%= render partial: "tiles_digest_mailer/tile_placeholder" %>
      <% elsif tiles[1].present? %>
        <%= render partial: "tiles_digest_mailer/tile", locals: {tile: tiles[1], site_link: @presenter.site_link(tile_id: tiles[1].id) } %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>
