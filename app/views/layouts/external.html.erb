<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= content_for :meta %>
    <%= render "shared/opengraph_meta_tags_marketing" %>
    <%= stylesheet_link_tag 'app-external' %>
    <%= javascript_include_tag 'app-external' %>

    <!--[if lt IE 9]>
      <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <style type="text/css">input[type="password"]{font-family:Arial!important;} .gradient {filter: none;}</style>
      <%= stylesheet_link_tag 'ie8-grid12-foundation-4.css' %>
      <%= stylesheet_link_tag 'external/external_ie8' %>
    <![endif]-->

    <%= render 'shared/mixpanel' %>
    <%= render 'shared/integrations/full_story' %>

    <%= mobvious_javascript %>
    <%= render 'shared/nerf_animations_in_test' %>
    <%= content_for :head %>
  </head>
  <body class="<%= body_class %> external">

    <%= render "pages/header" %>
    <div class="wrapper">
      <%= render "shared/flashes" %>
      <div id="status"><%= yield :status %></div>
      <%= yield %>
    </div>

    <div class="modals"></div>
    <%= yield :javascript %>
  </body>
</html>
