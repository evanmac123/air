<!doctype html>
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Airbo</title>

    <%= render "shared/opengraph_meta_tags" %>
    <meta name="viewport" content="width=device-width" />

    <%= stylesheet_link_tag 'app-external' %>
    <%= javascript_include_tag 'app-external' %>

    <!--[if lt IE 9]>
      <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <style type="text/css">input[type="password"]{font-family:Arial!important;} .gradient {filter: none;}</style>
      <%= stylesheet_link_tag 'ie8-grid12-foundation-4.css' %>
      <%= stylesheet_link_tag 'external/external_ie8' %>
    <![endif]-->
    <%= javascript_include_tag asset_path('ga.js') if ENV['USE_GA'] %>

    <%= render 'shared/mixpanel' %>
    <%= mp_track_page @page_name_for_mixpanel if @page_name_for_mixpanel.present? %>

    <%= mobvious_javascript %>
    <%= render 'shared/nerf_animations_in_test' %>
  </head>
  <body class="<%= body_class %> external">


    <%= render "pages/header" %>
    <div class="wrapper">
      <%= render "shared/flashes" %>
      <div id="status"><%= yield :status %></div>
      <%= yield %>
    </div>

    <%= render :partial => 'shared/modals/modals' %>
    <%= javascript_include_tag asset_path('ga-marketing.js') if ENV['USE_GA'] %>
    <%= yield :javascript %>
  </body>
</html>
