<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>H Engage</title>
  <%= stylesheet_link_tag :flutie, 'screen', 'new-marketing' %>
  <!--[if IE 7]>
    <%= stylesheet_link_tag 'ie7hacks' %>
  <![endif]-->
  <!--[if IE 8]>
    <%= stylesheet_link_tag 'ie8hacks' %>
  <![endif]-->

  <%= javascript_include_tag 'jquery' %>
  <%= csrf_meta_tag %>
</head>
<body class="<%= body_class %> new-marketing">

  <div id="header">
    <div id="header-contents">
      <%= form_tag session_path, :id => 'login-form' do %>
        <%= text_field_tag "session[username]", 'username', :class => 'with-placeholder' %>
        <%= password_field_tag "session[password]", 'password', :class => 'with-placeholder' %>
        <%= link_to "Forgot password?", {:controller => :passwords, :action => :new} %>
        <%= image_submit_tag 'new_marketing/btn_go.png' %>
      <% end %>

      <%= form_tag new_session_path, :method => :get, :id => 'activate-login-form' do %>
        <%= image_submit_tag 'new_marketing/btn_login.png' %>
      <% end %>

      <div id="navbar">
        <%= yield :navbar %>
      </div>
    </div>
    &nbsp;
  </div>

  <%= yield %>

  <%= yield :page_footer %>
  <div id="page-footer">
    Copyright &copy; 2011 H Engage, Inc.
  </div>

  <%= javascript_include_tag 'ga-marketing' %>

  <%= content_for :javascript do %>
    <%= javascript_tag do %>
      function removePlaceholder(event) {
        var field = $(event.target);
        $(field).removeClass('with-placeholder');
        $(field).val('');
      };

      $(document).ready(function() {
        $('.with-placeholder').focus(removePlaceholder)
      });
    <% end %>
  <% end %>

  <%= yield :javascript %>
</body>
</html>
