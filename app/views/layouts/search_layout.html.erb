<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Airbo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tag %>
    <%= content_for :meta %>

    <%= split_stylesheet_link_tag "app-client-admin", :media => "all", :split_count => 6 %>

    <%= javascript_include_tag 'app-admin' %>
    <%= mobvious_javascript %>
    
    <%= render 'shared/nerf_animations_in_test' %>
    <%= render partial: '/shared/mixpanel' %>
    <%= render 'shared/integrations/full_story' %>

    <%= render "shared/custom_palette"  if @palette && @palette.enabled? %>
    <%= content_for :head %>
  </head>
  <body style="-webkit-overflow-scrolling: touch; overflow:visible; "
    data-current-user="<%= current_user.data_for_mixpanel.to_json %>"
    data-current-board="<%= board_data_for_dom %>"
    data-intercom-user="<%= current_user.intercom_data.to_json %>"
    class="explore-search explore-search-<%= get_user_type(current_user) %>">
    <% if current_user.is_a?(GuestUser) %>
      <%= render 'shared/public_nav_bar' %>
    <% else %>
      <%= render 'shared/header' %>
    <% end %>
    <%= render 'shared/flashes' %>
    <%= render 'shared/offcanvas_menu_signedin' %>
    <main class="main">
      <%= render partial: 'shared/tiles_tools_subnav/tiles_tools_subnav' unless current_user.is_a?(GuestUser) %>
      <div class="core">
        <div class="content">
          <%= yield %>
        </div>
        <div id="footer">
        </div>
      </div>
    </main>
    <div class="modals"></div>
    <%= render partial: 'shared/javascript' %>
    <div id='gradient-triangle'></div>
  </body>
</html>
