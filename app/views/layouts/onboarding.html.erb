<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Airbo</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tag %>
    <%= content_for :meta %>

    <%= javascript_include_tag 'app-admin' %>
    <%= javascript_include_tag 'app-client-admin' %>
    <%= stylesheet_link_tag 'app-user-progress' %>
    <%= javascript_include_tag 'for-modern-browsers' unless browser.ie8? %>
    <%= split_stylesheet_link_tag "app-client-admin", :media => "all", :split_count => 6 %>

    <%= render partial: '/shared/mixpanel' %>
    <%= content_for :head %>
  </head>

  <body class="<%= body_class %> onboarding-body client_admin_main user-onboarding-state-<%= @user_onboarding.state %>" data-id="<%= @user_onboarding.id %>" data-state="<%= @user_onboarding.state %>" data-demo-scheduled="<%= @user_onboarding.demo_scheduled %>" data-email="<%= @user_onboarding.email %>" data-ip="<%= request.remote_ip %>" data-current-user="<%= current_user.try(:data_for_mixpanel).to_json %>" style="-webkit-overflow-scrolling: touch; overflow:visible;">
    <% unless request.user_agent =~ /Mobile|webOS/ %>
      <%= render partial: 'user_onboardings/partials/header' , locals:{user_onboarding: @user_onboarding}%>
      <main class="main">
    <% end %>
      <div class="core <%= params[:controller] + "-" + params[:action] %>-content">
        <div class="content <%= params[:controller] + "-" + params[:action] %>-content">
          <%= yield %>
        </div>
        <div id="footer">
        </div>
      </div>
    </main>

    </div>

    <%= render 'user_onboardings/partials/share_modal' if @user_onboarding.id %>
    <%= render 'user_onboardings/partials/onboarding_complete_modal' %>
    <%= render 'user_onboardings/partials/loading_full_airbo_modal' %>

    <%= yield :lightbox %>
    <%= render :partial => 'shared/javascript' %>
    <div id='gradient-triangle'></div>
  </body>
</html>
