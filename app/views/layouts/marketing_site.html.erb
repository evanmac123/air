<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Airbo</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  	<link rel="apple-touch-icon" href="apple-touch-icon.png">
    <%= content_for :meta %>

    <%= mobvious_javascript %>
    <%= javascript_include_tag 'app-marketing-site' %>
    <%= stylesheet_link_tag 'app-marketing-site' %>

    <%= render "shared/opengraph_meta_tags" %>
    <%= render 'shared/mixpanel' %>

    <!--[if lt IE 9]>
      <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <style type="text/css">
      .gradient {filter: none;}</style>
      <%= stylesheet_link_tag 'ie8-grid12-foundation-4.css' %>
      <%= stylesheet_link_tag 'internal/internal_ie8' %>
    <![endif]-->
    <%= javascript_include_tag asset_path('ga.js') if ENV['USE_GA'] %>

    <%= content_for :head %>
  </head>
  <body class="airbo-marketing-site" style="-webkit-overflow-scrolling: touch; overflow:visible;">
    <%= render partial: "pages/partials/marketing_site_header" %>
    <%= render partial: "shared/simple_flashes" %>
    <%= yield %>
    <%= render partial: "pages/partials/marketing_site_footer" %>
    <%= yield :javascript %>
  </body>
</html>
