<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Airbo</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= content_for :meta %>

    <%= csrf_meta_tag %>

    <%= split_stylesheet_link_tag "app-client-admin", :media => "all", :split_count => 6 %>
    <!--[if lte IE 9]>
      <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <style type="text/css">.gradient {filter: none;}</style>
      <%#TODO Remove /ie8-grid12-foundation-4.css' and client_admin_ie8 since we are not supporting ie < 10 for CAs %>
      <%= stylesheet_link_tag 'ie8-grid12-foundation-4.css' %>
      <%= stylesheet_link_tag 'client_admin/client_admin_ie8' %>
      <![endif]-->

      <%= javascript_include_tag 'app-admin' %>
      <%= javascript_include_tag 'app-client-admin' %>


      <%= javascript_include_tag 'for-modern-browsers' unless browser.ie8? %>
      <%= mobvious_javascript %>
      <%= render 'shared/nerf_animations_in_test' %>
      <%= render partial: '/shared/mixpanel' %>
      <%= render 'shared/inspectlet' if non_site_admin(current_user) %>
      <%= content_for :head %>
  </head>
  <body class="<%= body_class %> client_admin_main" style="-webkit-overflow-scrolling: touch; overflow:visible; " data-current-user="<%= current_user.data_for_mixpanel.to_json %>" data-ip="<%= request.remote_ip %>">

    <%= render 'shared/header' %>
    <%= render 'shared/flashes' %>
    <%= render 'shared/offcanvas_menu_signedin' %>
    <main class="main">
    <%= render partial: 'shared/tiles_tools_subnav/tiles_tools_subnav' %>
    <div class="core">
      <div class="content">
        <%= yield %>
      </div>
      <div id="footer">
      </div>
    </div>
    </main>


    <%= yield :lightbox %>

    <div class="modals"></div>
    <%= render :partial => 'shared/javascript' %><!-- This is where 'yield :javascript' takes place -->
    <div id='gradient-triangle'></div>
    <%= javascript_include_tag 'rem.min.js' %>
  </body>
</html>
