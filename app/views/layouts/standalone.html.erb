<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= content_for :meta %>
    <%= render "shared/opengraph_meta_tags_marketing" %>

    <%= javascript_include_tag 'app-marketing-site' %>
    <%= mobvious_javascript %>
    <%= stylesheet_link_tag 'app-landing' %>

    <%= render 'shared/mixpanel' %>
    <%= render 'shared/integrations/full_story' %>
    <%= render 'shared/integrations/google_analytics/marketing' %>
    <%= render 'shared/integrations/facebook_pixel' %>

    <!--[if lt IE 9]>
      <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <style type="text/css">
      .gradient {filter: none;}</style>
      <%= stylesheet_link_tag 'ie8-grid12-foundation-4.css' %>
      <%= stylesheet_link_tag 'internal/internal_ie8' %>
    <![endif]-->
    <%= render 'shared/nerf_animations_in_test' %>

    <%= content_for :head %>
  </head>
  <body class="<%= body_pages_class %> landing" style="-webkit-overflow-scrolling: touch; overflow:visible;">
    <%= render 'shared/flashes' %>

    <%= yield %>

    <div class="modals">
      <%= render partial: "acts/public_board/schedule_demo_modal" %>
    </div>

    <%= yield :javascript %>
  </body>
</html>
