<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Airbo</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= content_for :meta %>
    <%= csrf_meta_tag %>

    <%= javascript_include_tag 'app-user' %>
    <%= stylesheet_link_tag "app-internal", media: "all" %>

    <%= render 'shared/mixpanel' %>
    <%= render 'shared/integrations/full_story' %>
    <%= render 'shared/integrations/google_analytics/marketing' %>
    <%= render 'shared/integrations/facebook_pixel' %>

    <%= render "shared/custom_palette"  if @palette && @palette.enabled? %>
    <%= content_for :head %>
  </head>
  <body class="<%= body_class %>"
    data-current-user="<%= current_user.data_for_mixpanel.to_json %>"
    data-current-board="<%= board_data_for_dom %>"
    data-intercom-user="<%= current_user.intercom_data.to_json %>"
    style="-webkit-overflow-scrolling: touch; overflow:visible;">

    <%= render 'shared/header' %>
    <div id='js-flashes'><%= render 'shared/flashes' %> </div>
    <%= render 'shared/offcanvas_menu_signedin' %>


    <main class="main">
      <%= content_tag :div,
        id: "point-wording",
        data: org_points_wording do %>
      <% end %>
      <%= render partial: 'shared/tiles_tools_subnav/tiles_tools_subnav' %>
      <div class="core pb-5">
        <div class="content">
          <%= yield %>
        </div>
      </div>
    </main>

    <div class="modals">
    </div>

    <%= render 'shared/javascript' %>

  </body>
</html>
