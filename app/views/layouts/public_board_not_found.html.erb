<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= render 'shared/opengraph_meta_tags_board', board: @board %>

    <%= javascript_include_tag 'application' %>
    <%= stylesheet_link_tag 'app-external' %>
    <%= javascript_include_tag 'app-marketing-site' %>
    <%= stylesheet_link_tag 'app-marketing-site' %>

    <%= render 'shared/mixpanel' %>
    <%= render 'shared/integrations/full_story' %>
  </head>
  <body class="<%= body_class %> marketing airbo-marketing-site">
    <%= render partial: "pages/front_theme/navbar" %>
    <div class="wrapper main bootstrap-iso" style="margin-top: 0;">
      <%= yield %>

      <div class="justify-content-between align-items-center my-7 copyright">
        <%= image_tag 'logo_standard.png' %>
        <p class="small text-muted mb-0">&copy; Airbo. 2018. All rights reserved.</p>
      </div>
    </div>

    <div class="modals"></div>
    <div class="drawer">
      <ul>
        <li><a class="js-request-demo">Request Demo</a></li>
        <li><a class="js-login">Sign In</a></li>
      </ul>
    </div>
  </body>
</html>
