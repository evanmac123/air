<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=0.5">
    <%= csrf_meta_tag %>
    <%= content_for :meta %>

    <%= render partial: '/shared/mixpanel' %>

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'app-admin' %>
    <%= javascript_include_tag 'app-client-admin' %>
    <%= javascript_include_tag 'for-modern-browsers' unless browser.ie8? %>
    <%= stylesheet_link_tag "app-internal" %>
    <%= content_for :head %>
  </head>
  <body
    class="js-single-tile-base single-tile-base explore-tile_previews explore-tile_previews-show"
    style="-webkit-overflow-scrolling: touch; overflow:visible;"
    data-current-user-is-client-admin="<%= current_user.is_client_admin %>"
    data-current-user="<%= current_user.data_for_mixpanel.to_json %>"
    data-tile-path="<%= path_for_single_tile(tile: @tile, source: @explore_or_public) %>"
    data-more-content-url="<%= single_tile_more_content_url(tile: @tile) %>"
    data-explore-or-public="<%= @explore_or_public %>"
    data-twitter-hashtags="<%= single_tile_hashtags(tile: @tile) %>">


      <div class="single-tile-base-header">
        <div class="center header">
          <% if single_tile_logo(tile: @tile, source: @explore_or_public) %>
            <%= link_to root_path do %>
              <%= image_tag single_tile_logo(tile: @tile, source: @explore_or_public), class: "#{@explore_or_public.to_s}" %>
            <% end %>
          <% end %>

          <% if @explore_or_public == :public && !@tile.organization.try(:internal) %>
            <%= link_to marketing_site_home_path(utm_source: "#{@explore_or_public.to_s}_single_tile", utm_campaign: "Powered by Airbo") do %>
              <%= image_tag "powered-by-airbo-vertical.svg", class: "float-right #{@explore_or_public.to_s}" %>
            <% end %>
          <% end %>
        </div>
      </div>

    <main class="main">
    <div class="core">
      <div class="content">
        <%= yield %>
      </div>
    </div>
    </main>

    <% if single_tile_is_public(source: @explore_or_public) %>
      <div id="footer" style="color: #4c4c4c;">
        <%= render 'shared/copyright' %>
      </div>
    <% else %>
      <footer class="bg-blue tall" >
        <div class="row">
          <div class="columns large-6 small-11 small-centered">
            <p class="medium margin-none">
              Welcome to Airbo
            </p>
            <p>Airbo is HR's Employee Communication Assistant. We help create a workplace that employees love.
            </p>
            <p>
              <%= link_to "See How Airbo Works", marketing_site_home_path(utm_source: "explore_single_tile", utm_campaign: @tile.headline), class: "js-convert-cta button yellow", target: "blank" %>
            </p>
          </div>
        </div>
      </footer>
    <% end %>
  </body>
</html>
