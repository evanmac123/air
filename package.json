{
  "private": true,
  "dependencies": {
    "@rails/webpacker": "^3.3.1",
    "autosize": "^4.0.1",
    "axios": "^0.17.1",
    "babel-core": "6",
    "babel-loader": "^7.1.4",
    "babel-preset-react": "^6.24.1",
    "caniuse-lite": "^1.0.30000697",
    "clipboard": "^2.0.0",
    "flickity": "^2.0.10",
    "medium-editor": "github:weilandia/medium-editor#1402_resolves_anchor_toolbar_for_ie",
    "progressbar.js": "^1.0.1",
    "prop-types": "^15.6.1",
    "rails-erb-loader": "^5.4.2",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "sanitize-html": "^1.18.2",
    "webpack": "^3.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.1",
    "eslint": "^4.8.0",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-config-prettier": "^2.6.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.9.1",
    "lint-staged": "^4.2.3",
    "pre-commit": "^1.2.2",
    "prettier": "^1.7.3",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-scss": "^2.2.0",
    "webpack-dev-server": "2.11.2"
  },
  "scripts": {
    "lint-staged": "$(yarn bin)/lint-staged",
    "build": "./bin/webpack",
    "start": "./bin/bundle exec foreman start -f Procfile.dev",
    "rails": "./bin/rails server -p 3000",
    "webpack-server": "./bin/webpack-dev-server"
  },
  "lint-staged": {
    "config/webpack/**/*.js": [
      "prettier --write",
      "git add"
    ],
    "app/javascript/**/*.js": [
      "eslint",
      "git add"
    ],
    "app/assets/javascripts/**/*.js": [
      "prettier --write",
      "git add"
    ],
    "app/**/*.{css, scss}": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "{app, spec}/**/*.rb": [
      "bundle exec rubocop -a",
      "bundle exec reek",
      "git add"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ]
}
